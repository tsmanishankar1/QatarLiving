@using MudBlazor
@using QLN.Web.Shared.Components.CustomButton

<MudPaper Class="pa-6 mx-auto mt-10" 
          Style="max-width: 500px; border-radius: 12px; margin-top: 30px; margin-bottom: 30px; position: relative;">
    <MudStack Spacing="2" AlignItems="AlignItems.Center">
        <img src="@ImageUrl" alt="Verification Status" style="width: 57px; height: 57px;" /> 
        <MudText Typo="Typo.h6" Align="Align.Center" Class="mt-2">@Title</MudText> 
        <MudText Typo="Typo.body2" Align="Align.Center" Class="mb-2">
            @Description
        </MudText>
        <CustomButton 
            BackgroundColor="#FF7F38"
            TextColor="#FFFFFF"
            Text="@ButtonName"
            OnClick="@OnClick"
            Class="mt-4" />
    </MudStack>
</MudPaper>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Description { get; set; }
    [Parameter] public string ButtonName { get; set; }
    [Parameter] public string StatusType { get; set; } 
    [Parameter] public EventCallback OnClick { get; set; }

    private string ImageUrl => StatusType == "Success" ? "images/success.svg" : "images/failure.svg";
}