        font-family: 'Public Sans', sans-serif;
    }
    .news-tabs-wrapper{
     width: 100%;
     margin-top: 16px;
}
    .news-layout {
        flex-direction: column;
        align-items: center;
    }
    .carousel-padding {
        padding-left: 0px;
        padding-right: 0px;
    }
    .side-padding {
        padding-left: 16px;
