.main-title{
     font-family: 'Public Sans', sans-serif;
    font-weight: 600;
    font-size: 25px;
    color: var(--color-text-heading);
}
.main-author{
    font-family: 'Public Sans', sans-serif;
    font-weight: 500;
    font-size: 14px;
    color: var(--color-text-heading);
}
.main-source {
    font-family: 'Public Sans', sans-serif;
