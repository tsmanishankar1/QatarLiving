    @foreach (var sortOption in sortOptions)
    {
        <MudSelectItem Value="sortOption.Value">@sortOption.Key</MudSelectItem>
    }
            </MudSelect> *@
       </div>

    </MudStack>
<StoreProductCard
    ImageUrl="https://via.placeholder.com/300x180"
    Title="Fresh Organic Apples"
    Price="12.00"
    StoreLogoUrl="https://yourstorelogo.png"
    StoreName="Lulu Hypermarket"
    Location="Doha, Qatar" />
       
    </div>
</div>

@code {
    private PromotedItem? SelectedItem;

    private void HandleItemSelected(PromotedItem item)
    {
        SelectedItem = item;
    }
     private ProductSortType selectedSort = ProductSortType.Default;

    private List<KeyValuePair<string, ProductSortType>> sortOptions = new()
    {
        new("Default", ProductSortType.Default),
        new("Price: Low to High", ProductSortType.PriceLowHigh),
        new("Price: High to Low", ProductSortType.PriceHighLow)
    };
    public enum ProductSortType
{
    Default,
    PriceLowHigh,
    PriceHighLow
}
}

<style>
    .category-banner-wrapper {
        width: 100%;
        display: flex;
        justify-content: center;
    }
    .custom-chip {
    background-color: var(--color-accent); 
    color: white;
    }

