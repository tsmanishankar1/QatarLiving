@using Microsoft.Extensions.Options
@using QLN.Web.Shared.Helpers
@using QLN.Web.Shared.Components.EmptyCard
@inherits EventListCardBaseV2
@using QLN.Common.Infrastructure.DTO_s
@using QLN.Web.Shared.Services
@inject IOptions<NavigationPath> NavigationPath

<MudLink Href="@($"{NavigationPath.Value.ContentEventsDetail}/{Item.Slug}")" Style="text-decoration: none;">
    <div class="Event-list-card">
        <div class="eventv2-image-wrapper">
            @if (string.IsNullOrWhiteSpace(Item.CoverImage) || imageFailed)
            {
                <EmptyCard Title="No image found." Subtitle="Please check back later for updates." />
            }
            else
            {
                @if (!imageLoaded)
                {
                    <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="100%" Height="214px" />
                }

                <img src="@Item.CoverImage" class="eventv2-card-img" alt="@Item.EventTitle"
                     style="@(imageLoaded ? "display: block;" : "display: none;")" @onload="OnImageLoaded"
                     @onerror="OnImageError" key="@Item.CoverImage" />
            }

            @if (!string.IsNullOrEmpty(Item.EventSchedule.StartDate) && !string.IsNullOrEmpty(Item.EventSchedule.EndDate))
            {
                <div class="date">
                    @DateHelper.FormatDate(Item.EventSchedule.StartDate) to @DateHelper.FormatDate(Item.EventSchedule.EndDate)
                </div>
            }
        </div>


        <div class="eventv2-card-body">
            <div class="category">@Item.CategoryName</div>

            <h3 class="eventv2-title">@Item.EventTitle</h3>
            <p class="description" style="text-overflow:ellipsis">@HtmlHelper.StripHTML(Item.EventDescription)</p>

            @if (!string.IsNullOrEmpty(Item.Location))
            {
                <div class="evntsv2-location">
                    <MudIcon Icon="@Icons.Material.Rounded.LocationOn" Class="location-icon" />
                    <span class="location-text">@Item.Location</span>
                </div>
            }
            @* Show only if EventType is valid *@
            @if (Enum.IsDefined(typeof(EventType), Item.EventType))
            {
                <div class="price">
                    @switch (Item.EventType)
                    {
                        case EventType.FreeAcess:
                            <span class="price-amount">Free Access</span>
                            break;
                        case EventType.OpenRegistrations:
                            <span class="price-amount">Open Registration</span>
                            break;
                        case EventType.FeePrice:
                            <span class="price-amount">
                                @(Item.Price.HasValue ? $"{Item.Price.Value} QAR" : "Based on Prices")
                            </span>
                            break;
                    }
                </div>
            }

        </div>
    </div>
    </MudLink>



<style>
    .Event-list-card {
        border-radius: 6px;
        overflow: hidden;
        box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.05);
        display: flex;
        flex-direction: column;
        position: relative;
        height: 404px;
        cursor: pointer;
        font-family: 'Public Sans', sans-serif;
        background: #FFFFFF;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        will-change: transform;
    }

    .Event-list-card:hover {
        transform: translateY(-6px) scale(1.02);
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
        z-index: 2;
    }

    .eventv2-image-wrapper {
        position: relative;
        width: 100%;
        height: 214px;
        overflow: hidden;
        border-radius: 0;
    }

    .eventv2-card-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        border-radius: 0;
    }

    .date {
        position: absolute;
        bottom: 0px;
        right: 0px;
        background: #0071AF;
        color: white;
        padding: 4px 10px;
        font-size: 12px;
        font-weight: 500;
    }

    .eventv2-card-body {
        padding: 10px 16px;
        display: flex;
        flex-direction: column;
        gap: 6px;
        background: #FFFFFF;
    }

    .category {
        font-size: 11px;
        font-weight: 500;
        color: #646464;
    }

    .eventv2-title {
        margin: 0;
        font-size: 18px;
        font-weight: 600;
        color: #242424;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        /* Limit to 2 lines */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .description {
        font-size: 14px;
        color: #242424;
        font-weight: 400;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        /* Limit to 2 lines */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        margin: 0;
        padding: 0;
    }

    .evntsv2-location {
        display: flex;
        align-items: center;
        gap: 4px;
        font-size: 12px;
        font-weight: 500;
        color: #646464;
        margin: 0;
        padding: 0;
    }

    .location-icon {
        font-size: 20px;
        color: #646464;
    }

    .price {
        font-size: 25px;
        font-weight: 600;
        color: var(--color-primary);
    }

    .price .currency {
        font-size: 14px;
        font-weight: 500;
        margin-left: 4px;
        color: var(--color-primary);
    }
</style>
