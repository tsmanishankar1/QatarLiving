@using MudBlazor

<div class="store-header-wrapper">
    <div class="store-card">
        <div class="feture-store-logo-container">
            <img src="qln-images/stores/hypermarket.svg" class="deals-feture-store-logo" alt="Hypermarket" />
        </div>
    </div>

    <MudText Class="company-name pb-2">
        Baladi Express
    </MudText>

    <MudButton 
               Variant="Variant.Filled"
               Class="pb-2"
               Style="background-color: var(--color-accent); color: white; border-radius: 6px; padding: 5px 6px; text-transform: none; font-size: 14px; 
           font-family: 'Public Sans', sans-serif;
           font-weight: 500;"
               Href="https://example.com">
               <StartContent>
            <img src="qln-images/classifieds/world_outline.svg" alt="World" style="width: 20px; height: 20px; margin-right: 8px;" />
        </StartContent>
        Visit Website
    </MudButton>

    <MudButton 
               Variant="Variant.Filled"
               Class="pb-2"
               Style="background-color: var(--color-accent); color: white; border-radius: 6px; padding: 5px 6px; text-transform: none; font-size: 14px; 
           font-family: 'Public Sans', sans-serif;
           font-weight: 500;"
               Href="tel:+97450305370">
                <StartContent>
            <img src="qln-images/classifieds/call_outline.svg" alt="Call" style="width: 20px; height: 20px; margin-right: 8px;" />
        </StartContent>
        +974 50305370
    </MudButton>

    <MudButton Variant="Variant.Filled"
                Class="pb-2"
               Style="background-color: #4BC85A; color: white; border-radius: 6px; padding: 5px 6px; text-transform: none; font-size: 14px; 
           font-family: 'Public Sans', sans-serif;
           font-weight: 500;"
               Href="https://wa.me/97450305370"
               Target="_blank">
        <StartContent>
            <img src="qln-images/classifieds/whatsapp_outline.svg" alt="WhatsApp" style="width: 25px; height: 25px; margin-right: 8px;" />
        </StartContent>
        +974 50305370
    </MudButton>
</div>

