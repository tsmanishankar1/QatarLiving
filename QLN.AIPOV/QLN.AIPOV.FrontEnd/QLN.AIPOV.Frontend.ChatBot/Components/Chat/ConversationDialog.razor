<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Chat with AI</MudText>
    </TitleContent>
    <DialogContent>
        <MessageList Messages="Messages" SelectedValueChanged="OnDescriptionSelected" />
    </DialogContent>
    <DialogActions>
        <MudSpacer />
        <MudButton OnClick="SelectDescription" Disabled="string.IsNullOrEmpty(Description)" Color="Color.Secondary" Variant="Variant.Filled">Choose Selected Value</MudButton>
        <MudButton OnClick="Close" Color="Color.Primary" Variant="Variant.Filled">Close</MudButton>
    </DialogActions>
</MudDialog>

<style>
    .right-side-dialog {
        position: absolute !important;
        right: 0 !important;
        margin-right: 0 !important;
        top: 0 !important;
        height: 100% !important;
        width: 50% !important;
        max-width: none !important;
        transform: none !important;
    }

    .right-side-dialog-content {
        height: 100% !important;
        display: flex !important;
        flex-direction: column !important;
    }
</style>