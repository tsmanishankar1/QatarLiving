<div class="daily-know-section">
    <!-- Section Title -->
    <div class="daily-title">
        <span class="title-more-events">More Events</span>
    </div>

    <!-- Categories -->
    <div class="daily-category-group">
        @foreach (var item in DailyCategories)
        {
            <button class="daily-category-btn">
                @item.Label
            </button>
        }

        <button class="view-all-btn">
            View all
            <MudIcon Icon="@Icons.Material.Filled.KeyboardArrowRight" class="arrow-icon" />
        </button>
    </div>
</div>

@code {

    private List<CategoryItem> DailyCategories = new()
{
new CategoryItem { Label = "Concerts" },
new CategoryItem { Label = "Workshops" },
new CategoryItem { Label = "Sports" },
new CategoryItem { Label = "Festivals" },
new CategoryItem { Label = "Exhibitions" },
};


    public class CategoryItem
    {
        public string Label { get; set; }
    }
}
<style>
    .daily-know-section {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        gap: 20px;
        width: 100%;
        padding: 20px 0;
        font-family: 'Public Sans';
    }

    .daily-title {
        display: flex;
        align-items: center;
        gap: 6px;
    }


    .title-more-events {
        color: var(--color-text-heading);
        font-size: 25px;
        font-weight: 600;
        color: var(--color-text-heading);

    }

    .daily-category-group {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        align-items: center;
        justify-content: center;
    }

    .daily-category-btn {
        display: flex;
        align-items: center;
        padding: 10px 18px;
        border: 1px solid var(--color-secondary-grey-container);
        border-radius: 999px;
        background-color: white;
        font-size: 14px;
