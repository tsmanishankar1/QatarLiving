@page "/manage/services/listing/subscriptions"
@inherits ViewSubscriptionListingBase
@using QLN.ContentBO.WebUI.Models;
@layout ServicesLayout

<MudGrid Style="padding-top: 18px">
    <!-- Left Form Section -->
    <MudItem xs="12" md="12">
             <SearchSortBar OnSearch="HandleSearch" OnSort="HandleSort" OnTypeChange="HandleSubscriptionType" OnDateFilterChanged="HandleDateFiltersChanged" OnClearFilters="HandleClearFilters" Items="Listings" />
              <div class="community-table">
                    <ViewSubscriptionListingTable Listings="Listings" OnPageChange="HandlePageChange"
                OnPageSizeChange="HandlePageSizeChange" OnListReload="ReloadLoadSubscriptionListingsAsync"/>
             </div> 
    </MudItem>
</MudGrid>

