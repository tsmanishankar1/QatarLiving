@page "/manage/community"
@inherits CommunityBase
<MudGrid Style="padding-top: 18px">
    <!-- Left Form Section -->
    <MudItem xs="12" md="12">
            <MudText Class="community-style">Community</MudText>
            <MudTextField @bind-Value="@searchText"
                Placeholder="Search for Posts"
                Variant="Variant.Outlined"
                Adornment="Adornment.Start"
                AdornmentIcon="@Icons.Material.Filled.Search"
                Class="community-content-style custom-search-field"/>

                @* <MudPaper Class="pa-4"> *@
            <MudTable Items="_posts" Hover="true" Style="padding-top: 20px;">
                <HeaderContent>
                <MudTh>Number</MudTh>
                <MudTh>Post Title</MudTh>
                <MudTh>Category</MudTh>
                <MudTh>Username</MudTh>
                <MudTh>Creation Date</MudTh>
                <MudTh>Live for</MudTh>
                <MudTh>Actions</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Number">@context.Number</MudTd>
                    <MudTd DataLabel="Post Title">
                    <MudLink Href="#">@context.PostTitle</MudLink>
            </MudTd>
            <MudTd DataLabel="Category">@context.Category</MudTd>
            <MudTd DataLabel="Username">@context.Username</MudTd>
            <MudTd DataLabel="Creation Date">@context.CreationDate.ToString("dd-MM-yyyy")</MudTd>
            <MudTd DataLabel="Live for">@context.LiveFor</MudTd>
            <MudTd>
                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               OnClick="@(() => DeletePost(context.Number))" />
            </MudTd>
        </RowTemplate>
    </MudTable>

    @* <MudTablePager PageSizeOptions="new int[]{12}" PageSize="12" /> *@
@* </MudPaper> *@
      
       
    </MudItem>
</MudGrid>

<style>
    .community-style {
        font-family: 'Public Sans', sans-serif;
        font-size: 30px;
        font-weight: 600;
        color: #242424;
        text-transform: none;
        padding-bottom: 32px;
    }
    .community-content-style {
        background-color: #FFFFFF;
        border-radius: 4px; 
        width: 400px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);  
    }
    .custom-search-field .mud-input-adornment {
        color: #A1A1A1 !important;
    }
</style>