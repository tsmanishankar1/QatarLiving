    .custom-postad-button {
        background-color: #922a63;
        color: white;
        border-radius: 8px;
        box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
        font-weight: 600;
        padding: 0.5rem 1.5rem;
        display: inline-flex;
        align-items: center;
        flex-direction: row; 
        gap: 8px;
    }

    .custom-postad-button .mud-icon-root {
        font-size: 20px;      
        color: white !important;
    }

    .custom-postad-button:hover {
        background-color: #6c1d3f;
    }
