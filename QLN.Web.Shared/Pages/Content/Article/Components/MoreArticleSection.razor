@using MudBlazor
@inherits MoreArticleSectionBase

<div class="card-container">

    <h3><span class="accent-bar">|</span> More Articles</h3>

     @foreach (var article in Articles)
    {
        <div class="article-entry">
            @if (!string.IsNullOrWhiteSpace(article.ImageUrl))
            {
                <img src="@article.ImageUrl" class="article-image" />
            }
             <div class="article-content">
                @if(selectedPost == article){
                     <a class="selected-title" href="@($"/article/details/{Uri.EscapeDataString(article.Slug)}")">
                    @article.Title
                    </a>
                }
                else{
                    <a class="article-title" href="@($"/article/details/{Uri.EscapeDataString(article.Slug)}")">
                    @article.Title
                    </a>
                }
            </div>
        </div>
    }

    <img src="/qlm-images/classifieds/detail_ad.svg" alt="Ad" class="ad-banner" />

</div>

