    <MudSkeleton SkeletonType="SkeletonType.Rectangle"  Height="170px" />
    <MudCardContent>
        <MudSkeleton Width="60px" Height="12px"  /> <!-- Category -->
        <MudSkeleton Width="80px" Height="24px"  /> <!-- Price -->
        <MudSkeleton Width="90%" Height="20px"  /> <!-- Title -->
        <MudSkeleton Width="70%" Height="20px"  /> <!-- Sub Title / Description -->
        <MudSkeleton Width="40%" Height="12px"  /> <!-- Location -->
    </MudCardContent>
</MudCard>
