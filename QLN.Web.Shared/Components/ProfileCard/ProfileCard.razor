@using MudBlazor
@using QLN.Web.Shared.Components.CustomButton
<MudPaper Class="profile-container mx-auto my-4" Elevation="1">
    <MudGrid Justify="Justify.Center" Class="text-center">
        <MudItem xs="12">
            <MudAvatar Size="Size.Large" Image="@ProfileImageUrl" Class="mb-2 responsive-avatar" />
        </MudItem>
        <MudItem xs="12">
            <MudText Typo="Typo.h6" Class="text-style">@Name</MudText>
        </MudItem>
        @if (IsPremium)
        {
            <MudItem xs="12">
                <MudChip T="string" Color="Color.Primary" Variant="Variant.Outlined" Class="my-1">
                    Premium User
                </MudChip>
            </MudItem>
        }
    </MudGrid>

    <MudDivider Class="my-3" />

    <MudText Typo="Typo.subtitle2" Class="heading-style mb-2 p-4">Personal Information</MudText>

    <MudGrid GutterSize="GutterSize.Small" Class="mx-4">
        @foreach (var item in InfoItems)
        {
           <MudGrid Class="mb-1">
            <MudItem xs="4">
                <MudText  Style="font-weight: 500;">
                    @item.Key
                </MudText>
            </MudItem>
            <MudItem xs="8">
                <MudText Class="text-primary" Style="font-weight: 500;">
                    @item.Value
                </MudText>
            </MudItem>
        </MudGrid>
        }
        
    <CustomButton 
                                BackgroundColor= "var(--color-button-secondary)"
                                TextColor="#FFFFFF"
                                Text="Edit Profile"
                                Class="mt-4 custom-width" />
    </MudGrid>


    <MudDivider Class="my-4" />

    <MudText Typo="Typo.caption" Class="text-secondary font-weight-bold mb-2 mx-4">HELP RESOURCES</MudText>
    <MudList T="string" Dense="true">
    <MudListItem T="string" Href="#"><MudText>Help Center</MudText></MudListItem>
    <MudListItem T="string" Href="#"><MudText>Contact Support</MudText></MudListItem>
    <MudListItem T="string" Href="#"><MudText>Safety Tips</MudText></MudListItem>
    </MudList>
</MudPaper>

@code {
    [Parameter] public string ProfileImageUrl { get; set; } = string.Empty;
    [Parameter] public string Name { get; set; } = string.Empty;
    [Parameter] public bool IsPremium { get; set; } = false;
    [Parameter] public string Email { get; set; } = string.Empty;
    [Parameter] public string Phone { get; set; } = string.Empty;
    [Parameter] public string Location { get; set; } = string.Empty;
    [Parameter] public string Gender { get; set; } = string.Empty;
    [Parameter] public string Nationality { get; set; } = string.Empty;
    [Parameter] public List<string> Languages { get; set; } = new();

    [Parameter] public EventCallback OnEditClicked { get; set; }

    private Dictionary<string, string> InfoItems => new()
    {
        { "Email", Email },
        { "Phone", Phone },
        { "Location", Location },
        { "Gender", Gender },
        { "Nationality", Nationality },
        { "Languages", string.Join(", ", Languages) }
    };
}

<style>
    .responsive-avatar {
    width: 110px;
    height: 110px;
    }
    .text-style {
        font-size: 18px;
        font-weight: 700;
        font-family: 'Public Sans', sans-serif;
        color: "var(--color-button-secondary)";
    }
    .heading-style{
        font-size: 16px;
        font-weight: 700;
        font-family: 'Public Sans', sans-serif;
        color: "var(--color-button-secondary)";
    }
    .custom-width {
    width: 200px;
}
</style>
