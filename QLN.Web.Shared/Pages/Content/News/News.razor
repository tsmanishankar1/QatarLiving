    </div>
    <div class="max-container">
        <div class="news-tabs">
            @foreach (var tab in Tabs)
            {
                <div class="news-tab @(tab == SelectedTab ? "active" : "")" @onclick="() => SelectTab(tab)">
                    @tab
                </div>
            }
        </div>
    </div>
    <div style="gap: 0px;">
        <div class="news-container">   
            <div class="max-container">
                <MudGrid GutterSize="5px" Style="margin-bottom: 20px;">
                    <MudItem xs="12" md="8">
                        <div class="main-article">
                            <div class="main-content">
                                <div class="main-category" @onclick="@(() => onclick(topNewsSlot))">
                                    @if (isLoading){
                                        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="400px" Width="100%" Animation="Animation.Wave" />
                                    }
                                    else if (topNewsSlot == null || string.IsNullOrEmpty(topNewsSlot.Title))
                                    {
                                        <EmptyCard Title="No article found" Subtitle="Please check back later or explore other categories." />
                                    }
                                    else{
                                        @if(string.IsNullOrEmpty(topNewsSlot.ImageUrl)){
                                             <EmptyCard Title="No Image Available" Subtitle="" />
                                        }
                                        else{
                                        @if (!imageLoaded)
                                        {
                                            <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="100%" Height="200px" Class="main-image" />
                                        }
                                            <img src="@topNewsSlot.ImageUrl" alt="News Image" class="main-image"
                                            style="@(imageLoaded ? "display: block;" : "display: none;")" @onload="OnImageLoaded"
                                            @onerror="OnImageError" />
                                        }
                                    }
                                    @if (isLoading){
                                        <MudSkeleton Class="mb-2 mt-2" SkeletonType="SkeletonType.Text" Height="24px" Width="100px" Animation="Animation.Wave" />
                                         <MudSkeleton Class="mb-2" SkeletonType="SkeletonType.Text" Height="30px" Width="100%" Animation="Animation.Wave" />
                                        <MudSkeleton Class="mb-2" SkeletonType="SkeletonType.Text" Height="30px" Width="200px" Animation="Animation.Wave" />
                                    }
                                     else if (topNewsSlot == null || string.IsNullOrEmpty(topNewsSlot.Title))
                                    {
                                    }
                                    else{
                                         @if (!string.IsNullOrWhiteSpace(topNewsSlot?.Category)){
                                            <span class="category-style">@topNewsSlot?.Category</span>
                                         }
                                        <h2 class="main-title">@topNewsSlot.Title</h2>
                                        <div class="author-wrapper">
                                        <div class="main-author">
                                        @if (!string.IsNullOrWhiteSpace(@topNewsSlot?.UserName))
                                        {
                                            @topNewsSlot.UserName <span>â€¢</span>
                                        }
                                        </div>
                                        <div class="comment-badge">
                                        <img src="/qln-images/comment_icon.svg" alt="Comments" class="comment-icon" />
                                        <span class="count">12</span>
                                        </div> 
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </MudItem>
                    <MudItem xs="12" md="4">
                        <MoreArticle Articles="@moreArticleListSlot" loading="@isLoading" selectedTab="@selectedTabView"/>
                    </MudItem>
                </MudGrid>
               <div class="flex-container" style="padding-bottom: 40px;">
                    @if(isLoading){
                        <div class="horizontal-stack"> 
                        @for (int i = 0; i < 3; i++)
                        {
                            <MudPaper Elevation="0" Class="p-2" Style="max-width: 214px;">
                            <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="120px" Width="214px" Animation="Animation.Wave" Class="mb-3 rounded" />
                            <MudSkeleton SkeletonType="SkeletonType.Text" Height="20px" Width="100%" Animation="Animation.Wave" Class="mb-1" />
                            <MudSkeleton SkeletonType="SkeletonType.Text" Height="20px" Width="80%" Animation="Animation.Wave" />
                            </MudPaper>
                        }
                        </div>
                    }
                    else if (topNewsListSlot != null && topNewsListSlot.Any())
