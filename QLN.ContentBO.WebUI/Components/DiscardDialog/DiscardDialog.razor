@using MudBlazor
@inherits DiscardDialogBase

<MudDialog Style="width: 400px">
    <DialogContent>
        <MudPaper Elevation="0" Class="p-6 d-flex flex-column align-items-center">
            <img src="/qln-images/discard_icon.svg"
                 alt="Discard Icon"
                 style="width: 48px; height: 48px;" />

            <MudText Typo="Typo.h6" Class="mb-1">@Title</MudText>

            <MudText Typo="Typo.body2" Align="Align.Center" Class="my-5">
                @Description
            </MudText>

            <MudGrid GutterSize="0" Class="mb-2">
                <MudItem xs="6">
                    <MudButton OnClick="Cancel"
                               Variant="Variant.Filled"
                               Class="w-100"
                               Style="background-color: #FFFFFF; color:#242424; border-color: #D5D7DA; text-transform: capitalize;">
                        Cancel
                    </MudButton>
                </MudItem>
                <MudItem xs="6">
                    <MudButton OnClick="OnDiscardClicked"
                               Variant="Variant.Filled"
                               FullWidth="true"
                               Style="background-color: #FF7F38; color:white; text-transform: capitalize;">
                        Discard
                    </MudButton>
                </MudItem>
            </MudGrid>
        </MudPaper>
    </DialogContent>
</MudDialog>
