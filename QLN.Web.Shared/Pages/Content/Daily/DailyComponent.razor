@inherits DailyComponentBase
@using QLN.Web.Shared.Components.Carousel
@using QLN.Web.Shared.Components.TakeOverBanner
@using QLN.Web.Shared.Pages.Content.Daily
@using QLN.Web.Shared.Components.DailyFeaturedEventCard
@using QLN.Web.Shared.Pages.Content.Daily.DailyNewsCard
@using QLN.Web.Shared.Pages.Content.Daily.DailyVideoCards
@using QLN.Web.Shared.Pages.Content.Daily.DailyNewsLetter
@using QLN.Web.Shared.Pages.Content.Daily.DailyMoreArticle
@using QLN.Web.Shared.Pages.Content.Daily.DailyHighlights
@using QLN.Web.Shared.Pages.Content.Daily.DailyIntheKnow
@using QLN.Web.Shared.Pages.Content.Daily.MoreEvents
@layout ContentLayout

<PageTitle>Qatar Living | The go-to place for lifestyle, news, and events</PageTitle>

<div style="width: 100%;background-color: var(--color-secondary-background);">
    <div class="carousel-responsive-container">
        <div class="max-container">
            <!-- Carousel Banner -->
            <CarouselBanner ImageUrls="carouselImages" ShowArrows="true" EnableSwipeGesture="false" AutoCycle="true"
                Transition="Transition.Slide" />
        </div>
    </div>
    <div class="responsive-news-container">
        <div class="max-container">

            <MudGrid GutterSize="5px" Style="margin-bottom: 20px;">
                <MudItem xs="12" md="8">
                    <MudGrid GutterSize="10px">
                        <MudItem xs="12" sm="6" md="6">
                            <TopStoryCard Item="@TopStoryItem" />
                        </MudItem>
                        <MudItem xs="12" sm="6" md="6">
                            <TopEventCard Item="@HighlightedEvent" />
                        </MudItem>
                    </MudGrid>

                </MudItem>
                <MudItem xs="12" md="4">
                    <DailyMoreArticle Items="@MoreArticles" />
                </MudItem>
            </MudGrid>

            <MudGrid GutterSize="16px">
                <!-- Left column: news cards -->
                <MudItem xs="12" md="9" lg="9">
                    <MudGrid GutterSize="16px">
                        @foreach (var item in Items)
                        {
                            <MudItem xs="12" sm="6" md="4" lg="4">
                                <DailyNewsCard Item="item" IsHorizontal="false" />
                            </MudItem>
                        }
                    </MudGrid>
                </MudItem>

                <!-- Right column: newsletter -->
                <MudItem xs="12" md="3" lg="3">
                    <DailyNewsLetter />
                </MudItem>
            </MudGrid>


            <DailyIntheKnow />
        </div>
    </div>
    <div class="responsive-news-container-daily">
        <div class="max-container">
            <DailyFeaturedEvents FeaturedEvent="@featuredEeventData" Loading="isLoading" />

            <MoreEvents />
            <TakeOverBanner ImageUrl="/images/takeover_banner.svg" />

        </div>

    </div>
    <div class="max-container">
        <DailyVideoCards />
    </div>
    <div class="responsive-news-container">

        <div class="max-container">
            <DailyHighlights />
            <TakeOverBanner ImageUrl="/images/takeover_banner.svg" />
            <DailyHighlights />
        </div>
    </div>
</div>

