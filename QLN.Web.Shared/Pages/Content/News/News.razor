@page "/content/news"
@inherits NewsBase
@using MudBlazor
@using QLN.Web.Shared.Pages.Content.News.NewsCard
@using QLN.Web.Shared.Pages.Content.News.NewsLetter
@using QLN.Web.Shared.Pages.Content.News.PopularArticles
@using QLN.Web.Shared.Pages.Content.News.VideoCards
@using QLN.Web.Shared.Components.ViewToggleButtons
@using QLN.Web.Shared.Pages.Content.News.MoreArticle
@inject IJSRuntime JSRuntime
@using QLN.Web.Shared.Components.Carousel
<MudGrid Class="full-width" Justify="Justify.Center" >
    <MudItem xs="12">
    <div class="carousel-padding">
        <CarouselBanner ImageUrls="carouselImages"
                        ShowArrows="true"
                        EnableSwipeGesture="true"
                        AutoCycle="true"
                        Transition="Transition.Slide" />
    </div>
    </MudItem>
    @* <MudItem xs="12" Class="d-flex justify-center py-3">
        <ViewToggleButtons Items="@_viewOptions" SelectedValue="@_selectedView" OnSelected="SetViewMode" TextClass="custom-text"/>
    </MudItem> *@

    <MudItem xs="12" Class="news-tabs-wrapper">
        <div class="news-tabs">
            @foreach (var tab in Tabs)
            {
                <div class="news-tab @(tab == SelectedTab ? "active" : "")" @onclick="() => SelectTab(tab)">
                    @tab
                </div>
            }
        </div>
    </MudItem>

    <!-- Main Article and MoreArticles section -->
      <div class="news-container"> 
         <div class="side-padding" style="display: flex; flex-wrap: wrap; gap: 0px;">
    <MudItem xs="12" md="8">
        <div class="main-article">
            <div class="main-content">
                <div class="main-category">
                    <img src="/images/sample_news.svg" class="main-image" />
                    <span class="category-style">Sports</span>
                    <h2 class="main-title">Al Sadd lift fourth Qatar Cup title with thrilling win over Al Duhail</h2>
                    <div class="author-wrapper">
                        <div class="main-author">
                            Ismat Zerin â€¢ <a href="#" class="main-source">Qatar Living</a>  
                            <img src="/images/tick.svg" alt="Qatarliving" />
                        </div>
                         <div class="comment-badge">
                            <img src="/images/comment_icon.svg" alt="Comments" class="comment-icon" />
                            <span class="count">12</span>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
    </MudItem>

    <MudItem xs="12" md="4">
        <MoreArticle />
    </MudItem>
     </div>  
    <!-- Recommended Cards -->
   <MudItem xs="12" Class="side-padding py-6">
   <div class="flex-container">
        @for (int i = 0; i < 3; i++)
        {
              <div class="news-card-wrapper @(i < 4 ? "with-divider" : "")"> 
                <NewsCard Item="GoldNews" IsHorizontal="false" />
                 </div> 
        } 
        <div class="newsletter-wrapper">
        <NewsLetter />
        </div>
    </div>
    </MudItem>
    <!-- Video Cards -->
     <MudItem xs="12">
    <div class="carousel-padding">
        <CarouselBanner ImageUrls="carouselImages"
                        ShowArrows="true"
                        EnableSwipeGesture="true"
                        AutoCycle="true"
                        Transition="Transition.Slide" />
    </div>
    </MudItem>
     </div> 
     <MudItem xs="12">
         <div class="side-padding">
       <VideoCards />
       </div>
     </MudItem>

    <!-- More Cards -->
    <MudItem xs="12" Class="py-2 ">
   <div class="card-container side-padding">
        @for (int i = 0; i < 5; i++)
        {
            <div class="news-card-wrapper @(i < 4 ? "with-divider" : "")">
                <NewsCard Item="GoldNews" IsHorizontal="false" />
            </div>
        }
        </div>
    </MudItem>
    <!-- Popular Articles & Ads -->
     <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="section-container side-padding">
    <MudItem xs="12">
         <div class="poular-article-container">
            <PopularArticles />
            <img src="/images/classifieds/detail_ad.svg"  alt="Product Image" />
        </div>
    </MudItem>
</MudContainer> 

    <!-- Even Better -->
     @* <MudItem xs="12">
        <MudText Typo="Typo.h5">Even Better</MudText>
        <MudGrid>
            @for (int i = 0; i < 3; i++)
            {
                <MudItem xs="12" sm="6" md="4">
                    <NewsCard Item="GoldNews" IsHorizontal="true" />
                </MudItem>
            }
        </MudGrid>
    </MudItem> *@
    <MudGrid GutterSize="3" Class="side-padding responsive-grid">
    @for (int i = 0; i < 9; i++)
    {
        <MudItem xs="12" sm="6" md="4"> 
            <div class="card-wrapper">
            <NewsCard Item="GoldNews" IsHorizontal="false" />
            </div>
        </MudItem>
    }
</MudGrid>
</MudGrid>

