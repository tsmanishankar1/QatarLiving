@using MudBlazor

<div class="categories-section">
    <MudContainer MaxWidth="MaxWidth.False">
        <MudText Typo="Typo.h6" Class="section-header">Featured Categories</MudText>

        <MudGrid GutterSize="24px">
            @foreach (var category in categories)
            {
                <MudItem xs="6" sm="4" md="2">
                    <MudCard Class="category-card" OnClick="@(() => HandleCategoryClick(category))">
                        <MudCardContent Class="card-content">
                            <img src="@category.ImageUrl" alt="@category.Name" class="category-image" />
                            <MudText Typo="Typo.subtitle2" Class="category-title">@category.Name</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>
    </MudContainer>
</div>

@code {
    public class CategoryItem
    {
        public string Name { get; set; }
        public string ImageUrl { get; set; }
    }

    private List<CategoryItem> categories = new()
    {
        new() { Name = "Ramadan Essentials",  ImageUrl = "/images/categories/ramadan.svg" },
        new() { Name = "Back to School",      ImageUrl = "/images/categories/school.svg" },
        new() { Name = "Gym Motivation",      ImageUrl = "/images/categories/gym.svg" },
        new() { Name = "Outdoors & Camping",  ImageUrl = "/images/categories/camping.svg" },
        new() { Name = "Electronics Rush",    ImageUrl = "/images/categories/electronics.svg" },
        new() { Name = "Cats & Dogs",         ImageUrl = "/images/categories/pets.svg" },
    };

    void HandleCategoryClick(CategoryItem category)
    {
        Console.WriteLine($"Clicked: {category.Name}");
    }
}

<style>
.categories-section {
    padding: 2rem 1rem;
}

.section-header {
    text-align: center;
    margin-bottom: 2rem;
    font-weight: 600;
    color: var(--mud-palette-text-primary);
}

.category-card {
    cursor: pointer;
    border-radius: 16px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    text-align: center;
}

.category-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.15);
}

.card-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.category-image {
    width: 80px;
    height: 80px;
    object-fit: contain;
    margin-bottom: 12px;
}

.category-title {
    font-size: 1rem;
    font-weight: 500;
    color: var(--mud-palette-text-primary);
}

</style>
