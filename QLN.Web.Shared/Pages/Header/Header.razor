@using MudBlazor
@inject NavigationManager NavManager
@inject ISnackbar Snackbar

<header class="site-header mud-elevation-1">
    <div class="header-left">
        <NavLink href="/">
            <MudImage Src="/qln-images/logo.png" Alt="Qatar Living" Height="30" />
        </NavLink>
    </div>

    <nav class="nav-links">
        <NavLink href="/more-features-coming-soon" class="nav-link">Daily</NavLink>
        <NavLink href="/more-features-coming-soon" class="nav-link">Properties</NavLink>
        <NavLink href="/more-features-coming-soon" class="nav-link">Vehicles</NavLink>
        <NavLink href="/classifieds" class="nav-link active">Classifieds</NavLink>
        <NavLink href="/more-features-coming-soon" class="nav-link">Services</NavLink>
        <NavLink href="/more-features-coming-soon" class="nav-link">Jobs</NavLink>
        <NavLink href="/more-features-coming-soon" class="nav-link">Rewards</NavLink>

        <MudButton Variant="Variant.Filled" Size="Size.Small" StartIcon="@Icons.Material.Filled.Add"
            Class="post-ad-btn no-uppercase">
            Post ad
        </MudButton>
    </nav>

    <div class="header-right">
        <MudAvatar Size="Size.Medium" Style="background-color: var(--color-header-button);">
            <img src="/qln-images/header/favourite_icon.svg" alt="Account" style="width: 70%; height: 70%; padding: 4px;" />
        </MudAvatar>


    </div>
</header>

<style>
    .no-uppercase {
        text-transform: none !important;
    }

    .site-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 2rem;
        background-color: var(--color-primary);
        color: var(--color-text-white);
    }

    .header-left img {
        height: 30px;
    }

    .nav-links {
        display: flex;
        gap: 1.5rem;
    }


    .nav-links .nav-link {
        color: var(--color-text-white) !important;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.95rem;
    }

    .nav-links .nav-link:hover {
        color: var(--color-accent) !important;
    }

    */ .nav-links {
        display: flex;
        gap: 1.5rem;
    }

    .nav-links .nav-link {
        color: var(--color-text-white);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.95rem;
        transition: color 0.2s;
    }

    .header-right {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .post-ad-btn {
        background-color: var(--color-accent) !important;
        color: var(--color-text-white) !important;
        font-weight: 600;
        text-transform: none;
    }

    .user-name {
        color: var(--color-text-white);
        font-size: 0.9rem;
    }

    .no-uppercase {
        text-transform: none !important;
    }

    .btn-orange-outlined {
        margin: 8px 12px;
        color: var(--color-accent);
        border-color: var(--color-accent);
        width: calc(100% - 24px);
        font-weight: bold;
    }

    .btn-orange-filled {
        margin: 8px 12px;
        background-color: var(--color-accent);
        color: var(--color-text-white);
        width: calc(100% - 24px);
        font-weight: bold;
    }
</style>

@code {
    private void GoToProfile() => NavManager.NavigateTo("/user-profile");

    private void Logout()
    {
        Snackbar.Add("Logged out successfully", Severity.Info);
        NavManager.NavigateTo("/");
    }
}
