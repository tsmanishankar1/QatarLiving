                                Height="100px" 
                                Width="100%" 
                                Animation="Animation.Wave" 
                                Class="rounded" />
                            </MudItem>
                            <MudItem xs="8" Class="d-flex flex-column justify-center pl-2">
                                <MudSkeleton 
                                SkeletonType="SkeletonType.Text" 
                                Height="20px" 
                                Width="60%" 
                                Animation="Animation.Wave" 
                                Class="mb-1" />
                                <MudSkeleton 
                                SkeletonType="SkeletonType.Text" 
                                Height="20px" 
                                Width="60%" 
                                Animation="Animation.Wave" 
                                Class="mb-1" />
                                <MudSkeleton 
                                SkeletonType="SkeletonType.Text" 
                                Height="20px" 
                                Width="80%" 
                                Animation="Animation.Wave" />
                            </MudItem>
                            </MudGrid>
                            </MudItem>
                        }
                        }
                    else if (articleListSlot2 != null && articleListSlot2.Any())
                        {
                        @for (int i = 0; i < articleListSlot2.Take(9).Count(); i++)
                        {
                            var news = articleListSlot2[i];
                            <MudItem xs="12" sm="6" md="4"> 
                            <div class="card-with-divider">
                            <NewsCard news="news" IsHorizontal="true" OnClick="() => onclick(news)" />
                            @if ((i + 1) % 3 != 0)  
                            {
                                <div style="width: 1px; height: auto; background-color: #F0F0F0; align-self: stretch; margin: 0 14px"></div>
                            }
                            </div>
                            </MudItem>
                        } 
                            }
