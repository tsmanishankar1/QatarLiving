@using MudBlazor;
@inherits NewsCardBase

<div class="news-card @(IsHorizontal ? "horizontal" : "")" @onclick="() => OnClick.InvokeAsync(news)">
    <img src="@news.ImageUrl" alt="News Image" class="daily-news-image" />
    <div class="daily-news-content">
        <div class="daily-news-title">@news.Title</div>
    </div>
</div>

<style>
    .news-card {
        display: flex;
        border-radius: 6px;
        overflow: hidden;
        font-family: 'Public Sans';
        width: 100%;
        @* max-width: 214px; *@
        flex-direction: column;
    }

    .news-card.horizontal {
        flex-direction: row;
        height: 100%;
        width: 100%;
        @* max-width: 214px; *@
    }
    .news-card:not(.horizontal) {
        max-width: 214px;
    }

    .daily-news-image {
        width: 100%;
        height: 140px;
        border-radius: 6px;
        object-fit: cover;
    }

    .news-card.horizontal .daily-news-image {
        width: 177px;
        height: 100px;
        border-radius: 12px;
        flex-shrink: 0;
        object-fit: cover;
    }
    .news-card.horizontal .daily-news-content {
    flex: 1;
    min-width: 0;
    }   
   

    .daily-news-content {
        padding: 12px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .category {
        color: var(--color-accent);
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 4px;
    }

    .daily-news-title {
        font-size: 16px;
        font-weight: 600;
        color: var(--color-text-heading);
        line-height: 26px;
        letter-spacing: 0;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    @@media (max-width: 768px) {
        .news-card {
            flex-direction: row;
            max-width: 100%;
            padding: 10px;
        }

        .daily-news-card.horizontal {
            flex-direction: column;
            height: auto;
        }

        .daily-news-image {
            height: 100px;
            width: 177px;
            border-radius: 6px;
        }

        .news-title {
            color: var(--color-text-heading);
            display: -webkit-box;
            -webkit-line-clamp: 2;
            /* Limit to 2 lines */
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    }
    @@media (max-width: 768px) {
        .news-card {
           display: flex;
            border-radius: 6px;
            overflow: hidden;
            font-family: 'Public Sans';
            width: 100%;
            flex-direction: row;
        }
    }
    @@media (max-width: 425px) {
    .news-card {
        display: flex;
        border-radius: 6px;
        overflow: hidden;
        font-family: 'Public Sans';
        width: 100%;
        flex-direction: row;
    }
    .daily-news-content {
    flex: 1;
    min-width: 0;
    }   
}

</style>
