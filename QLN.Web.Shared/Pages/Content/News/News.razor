                        var thirdItem = topNewsListSlot.ElementAtOrDefault(2);
                        @foreach (var news in topNewsListSlot.Take(3).Skip(1))
                        { 
                        <NewsCard news="news" IsHorizontal="false" OnClick="() => onclick(news)"/>
                         @if(news != thirdItem){
                            <div style="width: 1px; height: auto; background-color: #F0F0F0; align-self: stretch; margin: 0 14px"></div>
                        } 
                    } 
                    }
                    else{
                        <EmptyCard Title="No article found" Subtitle="Please check back later or explore other categories." />
                    }
