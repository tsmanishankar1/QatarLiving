@using QLN.Web.Shared.Components.BreadCrumb
@using QLN.Web.Shared.Pages.Classifieds.Components.CreateForm.Components.CreateFormList
@using QLN.Web.Shared.Pages.Classifieds.Components.CreateForm.Components.UploadPhotos
@using MudBlazor

<div class="form-wrapper">
    <Breadcrumb Items="breadcrumbItems" />

    <div Class="form-container">
        <MudGrid GutterSize="24px">
            <MudItem xs="12" md="5">
                <CreateFormList TItem="string" @ref="formRef" CategoryChanged="HandleCategoryChanged" />
            </MudItem>

            <MudItem xs="12" md="7">
                @if (!string.IsNullOrWhiteSpace(selectedCategoryFromChild))
                {
                    <UploadPhotos @ref="photoRef" />
                }
            </MudItem>
        </MudGrid>
    </div>

    @if (!string.IsNullOrWhiteSpace(selectedCategoryFromChild))
    {
        <div class="d-flex justify-end mt-4">
            <MudButton Variant="Variant.Outlined" Class="close-button">Close</MudButton>
            <MudButton Class="ml-2 save-button" Variant="Variant.Filled" OnClick="SaveForm">
                Save & Publish
            </MudButton>
        </div>
    }
</div>

@code {
    private List<QLN.Web.Shared.Components.BreadCrumb.BreadcrumbItem> breadcrumbItems = new();
    private CreateFormList<string> formRef;
    private UploadPhotos photoRef;
    private string selectedCategoryFromChild;

    private void HandleCategoryChanged(string category)
    {
        selectedCategoryFromChild = category;
    }

    protected override void OnInitialized()
    {
        breadcrumbItems = new()
{
new() { Label = "Classifieds", Url = "/classifieds" },
new() { Label = "Create Form", Url = "/classifieds/createform", IsLast = true }
};
    }

    private void SaveForm()
    {
        var formData = formRef?.GetFormData();
        var photoUrls = photoRef?.GetPhotoUrls();
