@page "/qln/classifieds/items"
@using MudBlazor
@using QLN.Web.Shared.Models
@inject SearchStateService SearchState
@using QLN.Web.Shared.Pages.Classifieds.Items.Components
@using QLN.Web.Shared.Pages.Classifieds.Items.Components.IteamdetailsSection
@layout ClassifiedsLayout

<div style="width: 100%; background-color: var(--color-secondary-background);">
    <div class="search-section-container">
<div class="max-container">
    <SearchSection OnSearchStarted="HandleSearchStarted" OnSearchCompleted="HandleSearchResults"
        OnViewModeChanged="HandleViewModeChange" />
</div>
 </div>
  <div class="max-container">
        <div class="category-banner-wrapper">
            <img src="/qln-images/banner_image.svg" alt="Category Banner" class="category-banner-image" />
        </div>


        <IteamListSection ViewMode="@currentViewMode" Items="@_items" Loading="_isSearching" />

 </div>
</div>

@code {
    private string currentViewMode = "grid";
    private List<PromotedItem> _items = new();
    private bool _isSearching = false;
    protected override void OnInitialized()
    {
        // Restore state if results are already present
        if (SearchState.Results != null && SearchState.Results.Any())
        {
            _items = SearchState.Results;
            currentViewMode = SearchState.ViewMode ?? "grid";
        }
    }

    private void HandleSearchStarted()
    {
        _isSearching = true;
        StateHasChanged();
    }

    private void HandleSearchResults(List<PromotedItem> result)
    {
        _items = result ?? new();
        _isSearching = false;
        SearchState.Results = _items;
        StateHasChanged();
    }

    private void HandleViewModeChange(string newMode)
    {
        currentViewMode = newMode;
        SearchState.ViewMode = newMode;
    }


}

<style>
    .category-banner-wrapper {
        width: 100%;
        display: flex;
        justify-content: center;
    }
     .search-section-container {
        width: 100%;
        background-color: var(--color-background-secondary-grey-medium);
    }
   .max-container {
        max-width: 1170px;
        margin: 0 auto;
    }

    .category-banner-image {
        width: 100%;
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        object-fit: cover;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
    }
</style>