@using MudBlazor;
@inherits NewsCardBase
<div class="news-card @(IsHorizontal ? "horizontal" : "vertical")">
    <img src="@Item.ImageUrl" alt="News Image" class="news-image" />
    <div class="news-content">
        <div class="category">@Item.Category</div>
        <div class="news-title">@Item.Title</div>
    </div>
</div>

<style>
   .news-card {
    display: flex;
    border-radius: 12px;
    overflow: hidden;
    font-family: 'Public Sans', sans-serif;
    width: 100%;
    max-width: 240px;
    flex-direction: column;
}

.news-card.horizontal {
    flex-direction: row;
    height: 140px;
    max-width: 100%;
}

.news-image {
    width: 100%;
    height: 140px;
    border-radius: 12px;
    object-fit: cover;
}

.news-card.horizontal .news-image {
    width: 100%;
    height: 100%;
    border-radius: 12px;
}

.news-content {
    padding: 12px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.category {
    color: #FF7F38;
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 4px;
}

.news-title {
    font-size: 16px;
    font-weight: 600;
}
@@media (max-width: 768px) {
    .news-image {
        width: 177px;
        height: 100px;
    }
    .news-card {
    flex-direction: row;
    max-width: 100%;
}


    }
</style>


