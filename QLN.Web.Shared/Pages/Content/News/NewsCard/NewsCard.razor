@using MudBlazor;
@inherits NewsCardBase

<div class="news-card @(IsHorizontal ? "horizontal" : "")" @onclick="() => OnClick.InvokeAsync(news)">
     @if(string.IsNullOrEmpty(news.ImageUrl)){
        @* <EmptyCard Title="No Image Available" Subtitle="" /> *@
        <div class="image-placeholder">
            No image available
        </div>
     }
     else{
        <img src="@news.ImageUrl" alt="News Image" class="daily-news-image" />
     }
    <div class="daily-news-content @(IsHorizontal ? "ishorizontal" : "")">
        <div class="daily-news-title">@news.Title</div>
    </div>
</div>

<style>
   .news-card {
    display: flex;
    border-radius: 6px;
    overflow: hidden;
    font-family: 'Public Sans';
    width: 100%;
    flex-direction: column;
}

.news-card.horizontal {
    flex-direction: row;
    height: 100%;
    width: 100%;
}
.image-placeholder {
    width: 100%;
    height: 140px;
    border-radius: 6px;
     display: flex;
    font-family: 'Public Sans', sans-serif;
    background-color: #FAFAFA;
    border-radius: 6px;
    align-items: center;
    justify-content: center;
    color: #555;
    font-size: 1rem;
}
.image-placeholder.ishorizontal {
    width: 100px;
    height: 177px;
    border-radius: 6px;
     display: flex;
    font-family: 'Public Sans', sans-serif;
    background-color: #FAFAFA;
    border-radius: 6px;
    align-items: center;
    justify-content: center;
    color: #555;
    font-size: 1rem;
}

.news-card:not(.horizontal) {
    max-width: 214px;
}

.daily-news-image {
    width: 100%;
    height: 140px;
    border-radius: 6px;
    object-fit: cover;
}

.news-card.horizontal .daily-news-image {
    width: 177px;
    height: 100px;
    border-radius: 6px;
    flex-shrink: 0;
    object-fit: cover;
}

.news-card.horizontal .daily-news-content {
    flex: 1;
    min-width: 0;
}

.daily-news-content {
    padding: 12px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 1;
    min-width: 0; /* Ensure content doesn't overflow and gets space */
}

.daily-news-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--color-text-heading);
    line-height: 26px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* Media Queries */
@@media (max-width: 768px) {
    .news-card {
        flex-direction: row;
        max-width: 100%;
    }

    .daily-news-image {
        height: 100px;
        width: 177px;
    }

    .daily-news-content {
        flex: 1;
        min-width: 0; /* prevents text clipping */
        padding: 8px;
    }
}

</style>
