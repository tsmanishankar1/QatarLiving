@inherits RadioAutoCompleteDialogBase
@using QLN.ContentBO.WebUI.Models;
<MudDialog Class="pa-2 custom-dialog py-4">
    <DialogContent>
        <div class="d-flex flex-column align-items-center pb-3 pt-3">
            <img class="icon-circle" src="/qln-images/search.svg" alt="search" />
            <span class="mt-2 title-style">
            @(IsHighlightedEvent ? "Highlighted Event" : (IsTopStory ? "Top Story" : origin == "dailyTopic" ? " " : "Add Article"))
            </span>
        </div>
        @if(origin == "dailyTopic"){
            <MudRadioGroup T="string" Value="@TopicType" ValueChanged="OnTopicTypeChanged" Class="custom-radio-group">
            <MudRadio Color="Color.Primary" T="string" Value="@("Article")">Article</MudRadio>
            <MudRadio Color="Color.Primary" T="string" Value="@("Video")">Video</MudRadio>
            <MudRadio Color="Color.Primary" T="string" Value="@("Event")">Event</MudRadio>
            </MudRadioGroup>
        }
        @if(TopicType == "Video"){
            <MudTextField Variant="Variant.Outlined" Label="VideoLink"  Class="my-2 event-custom-textfield" @bind-Value="@youTubelink"/>
        }
        else{
            <MudAutocomplete T="DailyLivingArticleDto"
                 Key="@Placeholder"
                 Label="@Placeholder"
                 Variant="Variant.Outlined"
                 @bind-Value="SelectedArticle"
                 @bind-SearchText="_searchText"
                 Adornment="Adornment.None"
                 MaxItems="50"
                 SearchFunc="SearchEventTitles"
                  ToStringFunc="@(e => e?.Title ?? string.Empty)"
                 ResetValueOnEmptyText="true"
                 CoerceText="true"
                 Clearable="true"
                 OnSearchTextChanged="ValidateTypedText">
                 <ItemTemplate Context="eventItem">
        <MudText>@eventItem.Title</MudText>
    </ItemTemplate>
         </MudAutocomplete>

        }
          @if (!string.IsNullOrEmpty(_autocompleteError))
            {
                    <div class="mud-error-text">@_autocompleteError</div>
            }
        <div class="mt-4 d-flex flex-column gap-2">
        <MudButton Variant="Variant.Filled"  Class="mt-4 custom-add-btn" OnClick="AddClicked">
            Add
        </MudButton>
        <MudButton Variant="Variant.Outlined" OnClick="Cancel" Class="mt-2 custom-close-btn">
            Close
        </MudButton>
        </div>
    </DialogContent>
</MudDialog>

<style>
    .title-style {
        font-family: 'Public Sans', sans-serif;
        font-size: 18px;
        font-weight: 600;
        color: #242424;
    }
    .icon-circle {
        width: 50px;
        height: 50px;
    }
    .custom-add-btn {
        background-color: #FF7F38;
        font-size: 16px;
        font-weight: 600;
        color: white;
        text-transform: none;
    }
    .custom-close-btn {
        border-color: #D5D7DA;
        color: #242424;
        text-transform: none;
    }
    .custom-dialog {
        width: 400px;
        max-width: 90vw;
    }
    .custom-radio-group {
    display: flex;
    flex-direction: row;
    justify-content: flex-start; 
    gap: 24px;
    margin-top: 16px;
    margin-left: 12px;
    font-family: 'Public Sans', sans-serif;
    font-size: 14px;
    font-weight: 600;
    color: #242424;
}

.mud-radio {
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: 600;
    font-size: 18px;
    color: #212121;
}

/* Outer circle */
.mud-radio-input input[type="radio"] + .mud-radio-icon {
    border: 2px solid #D0D5DD;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    box-sizing: border-box;
}

/* Selected inner circle fill */
.mud-radio-input input[type="radio"]:checked + .mud-radio-icon {
    border: 8px solid #FF7F38; /* outer ring orange */
    background-color: white;
}
</style>