@inherits NewsLetterBase
@using QLN.Web.Shared.Components.CustomButton
@using System.ComponentModel.DataAnnotations

<MudThemeProvider Theme="@CustomPaletteTheme" /> 
<div class="newsletter-container">
    <h2 style="text-align: center;">Get The QL newsletter. Sign up to receive the top stories you need to know right now.</h2>
     <MudForm @ref="_form">
        <MudTextField @bind-Value="SubscriptionModel.Email"
                  Placeholder="Enter your email"
                  Variant="Variant.Outlined"
                  For="@(() => SubscriptionModel.Email)"
                  Required="true"
                  RequiredError="Email is required"
                  InputType="InputType.Email"
                  Immediate="true"
                  Margin="Margin.Dense"
                  />

        <CustomButton id="forgetPasswordButton" BackgroundColor="#FF7F38" TextColor="#FFFFFF" Text="Subscribe" Disabled="@IsSubscribingToNewsletter"
                    OnClick="@SubscribeAsync" Class="reset-button">
            @if (IsSubscribingToNewsletter)
            {
                <MudProgressCircular Indeterminate="true" Size="Size.Small" Class="me-2" />
                @("Subscribing...")
            }
            else
            {
                @("Subscribe")
            }
        </CustomButton>
     </MudForm>
</div>

<style>
    .newsletter-container {
        width: 100%;
        @* max-width: 500px; *@
  margin: 0 auto;
        padding: 24px;
        box-sizing: border-box;
        border: 1px solid #F0F0F0;
        border-radius: 6px;
        background-color: #FFFFFF;
        font-family: 'Public Sans', sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

        .newsletter-container h2 {
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 20px;
            font-family: 'Public Sans', sans-serif;
            color: #222;
        }

    .error-message {
        color: red;
        font-size: 13px;
        margin-bottom: 12px;
        text-align: left;
    }

    .signup-button:hover {
        background-color: #e56c21;
    }

    .reset-button {
        border-radius: 4px;
        height: 44px;
        margin-top: 10px;
    }
</style>

