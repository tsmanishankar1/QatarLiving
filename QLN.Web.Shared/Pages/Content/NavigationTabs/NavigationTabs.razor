@inject NavigationManager NavigationManager
@using QLN.Web.Shared.Components.SubTabs

<SubTabs Tabs="@tabItems" OnTabClick="@OnTabClick" />

@code {
    private List<SubTabs.TabItem> tabItems = new()
{
new() { Text = "Daily", Route = "/daily", ImagePath = "/images/content/daily_icon.svg" },
new() { Text = "News", Route = "/news", ImagePath = "/images/content/news_icon.svg" },
new() { Text = "Events", Route = "/events", ImagePath = "/images/content/events_icon.svg" },
new() { Text = "Community", Route = "/community", ImagePath =
"/images/content/community_icon.svg" },
};

    private void OnTabClick(SubTabs.TabItem tab)
    {
        NavigationManager.NavigateTo(tab.Route);
        // You can do additional logic here
    }
}