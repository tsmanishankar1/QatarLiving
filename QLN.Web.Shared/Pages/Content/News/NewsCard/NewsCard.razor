@using MudBlazor;
@inherits NewsCardBase
<div class="news-card @(IsHorizontal ? "horizontal" : "")" @onclick="NavigateToDetails">
    <img src="@news.ImageUrl" alt="News Image" class="news-image" />
    <div class="news-content">
        <div class="news-title">@news.Title</div>
    </div>
</div>

<style>
   .news-card {
    display: flex;
    border-radius: 12px;
    overflow: hidden;
    font-family: 'Public Sans', sans-serif;
    width: 100%;
    max-width: 214px;
    flex-direction: column;
}

.news-card.horizontal {
    flex-direction: row;
    max-width: 100%;
    padding: 10px;
}

.news-image {
    width: 214px;
    height: 121px;
    border-radius: 12px;
    object-fit: cover;
    flex-shrink: 0;
}

.news-content {
    width:100%;
    padding: 12px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
}

.news-title {
    font-size: 16px;
    font-weight: 600;
    font-family: 'Public Sans', sans-serif;
    color: var(--color-text-heading);
    word-wrap: break-word; 
    white-space: normal; 
}

/* ðŸ”’ Lock same image size in mobile view */
@@media (max-width: 768px) {
    .news-card {
        flex-direction: row;
        max-width: 100%;
        padding: 10px;
    }

    .news-card.horizontal {
        flex-direction: row;
        height: auto;
    }

    .news-image {
        width: 177px !important;
        height: 121px !important;
        flex-shrink: 0;
    }
}
</style>


