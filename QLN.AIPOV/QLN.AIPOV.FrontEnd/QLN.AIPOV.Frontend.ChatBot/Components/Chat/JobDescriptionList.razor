<MudList Dense="true" T="JobDescription" SelectedValue="@SelectedValue" SelectedValueChanged="OnSelectedValueChanged" Class="rounded-lg">
    @if (JobDescriptions != null)
    {
        @foreach (var msg in JobDescriptions)
        {
            <MudListItem Value="@msg" Disabled="false" Dense="false">
                <MudCard Elevation="3" Class="my-2 rounded-lg job-card">
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6" Color="Color.Primary">@msg.JobTitle</MudText>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudIconButton Icon="@Icons.Material.Filled.ArrowForward" Color="Color.Default" />
                        </CardHeaderActions>
                    </MudCardHeader>

                    <MudCardContent>
                        <MudGrid>
                            <MudItem xs="12">
                                <MudText Typo="Typo.subtitle1" Color="Color.Primary" Class="mb-1">Job Purpose</MudText>
                                <MudText Typo="Typo.body2" Class="mb-3 job-text">@msg.JobPurpose</MudText>
                            </MudItem>

                            <MudItem xs="12" md="6">
                                <MudPaper Elevation="0" Class="pa-3 mud-background-gray rounded-lg">
                                    <MudText Typo="Typo.subtitle1" Color="Color.Primary" Class="mb-2"><MudIcon Icon="@Icons.Material.Filled.Check" Size="Size.Small" Class="mr-1" /> Required Qualifications</MudText>
                                    <MudText Typo="Typo.body2" Class="job-text">@msg.RequiredQualifications</MudText>
                                </MudPaper>
                            </MudItem>

                            <MudItem xs="12" md="6">
                                <MudPaper Elevation="0" Class="pa-3 mud-background-gray rounded-lg">
                                    <MudText Typo="Typo.subtitle1" Color="Color.Primary" Class="mb-2"><MudIcon Icon="@Icons.Material.Filled.Star" Size="Size.Small" Class="mr-1" /> Preferred Qualifications</MudText>
                                    <MudText Typo="Typo.body2" Class="job-text">@msg.PreferredQualifications</MudText>
                                </MudPaper>
                            </MudItem>

                            <MudItem xs="12" Class="mt-3">
                                <MudExpansionPanel Class="pa-0 rounded">
                                    <TitleContent>
                                        <MudText Typo="Typo.subtitle1" Color="Color.Primary">
                                            <MudIcon Icon="@Icons.Material.Filled.Assignment" Size="Size.Small" Class="mr-1" />
                                            Duties & Responsibilities
                                        </MudText>
                                    </TitleContent>
                                    <ChildContent>
                                        <MudText Typo="Typo.body2" Class="mt-2 job-text">@msg.JobDutiesAndResponsibilities</MudText>
                                    </ChildContent>
                                </MudExpansionPanel>

                                <MudExpansionPanel Class="pa-0 rounded mt-2">
                                    <TitleContent>
                                        <MudText Typo="Typo.subtitle1" Color="Color.Primary">
                                            <MudIcon Icon="@Icons.Material.Filled.LocationOn" Size="Size.Small" Class="mr-1" />
                                            Working Conditions
                                        </MudText>
                                    </TitleContent>
                                    <ChildContent>
                                        <MudText Typo="Typo.body2" Class="mt-2 job-text">@msg.WorkingConditions</MudText>
                                    </ChildContent>
                                </MudExpansionPanel>
                            </MudItem>
                        </MudGrid>
                    </MudCardContent>
                </MudCard>
            </MudListItem>
        }
    }
    else
    {
        <MudListItem>
            <MudAlert Severity="Severity.Info">No job descriptions available</MudAlert>
        </MudListItem>
    }
</MudList>

<style>
    .job-card {
        transition: all 0.3s ease;
    }

    .job-card:hover {
        transform: translateY(-2px);
        box-shadow: var(--mud-elevation-5);
    }

    .job-text {
        white-space: pre-wrap;
    }
</style>
