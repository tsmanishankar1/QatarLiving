@using MudBlazor
@using QLN.Web.Shared.Components

<div class="store-deals-section">
    <!-- Header -->
    <MudText Typo="Typo.h6" Class="section-title">Discover amazing deals from the best stores in Qatar</MudText>

    <!-- Store Cards Grid -->
    <div class="stores-container">
        @foreach (var store in stores)
        {
            <div class="store-card">
                <div class="store-logo-container">
                    <img src="@store.LogoUrl" class="store-logo" alt="@store.Name" />
                </div>
                <div class="store-info">
                    <div class="store-name">@store.Name</div>
                    <div class="store-items">@store.ItemCount Items</div>
                      <MudButton Variant="Variant.Text" 
                           Style="color: var(--color-accent);"
                           Size="Size.Small"
                           FullWidth="true"
                           Class="shop-now-btn"
                           EndIcon="@Icons.Material.Filled.ArrowForward"
                           OnClick="@(() => HandleShopNow(store))">
                    Shop Now
                </MudButton>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .store-deals-section {
       padding: 2rem 1rem;
    }

    .section-title {
        text-align: center;
        margin-bottom: 1.5rem;
        font-weight: 600;
        color: var(--color-text-secondary);
    }

    .stores-container {
        display: grid;
        grid-template-columns: repeat(6, 1fr);
        gap: 12px;
    }

    .store-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 12px;
        border-radius: 8px;
        transition: all 0.2s ease;
    }

    .store-card:hover {
        transform: translateY(-2px);
    }

    .store-logo-container {
        width: 100px;
        height: 100px;
        margin-bottom: 8px;
        border-radius: 50px;
        background: var(--color-background);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .store-logo {
        padding: 20px;
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }

    .store-info {
        text-align: center;
        gap: 5px;
        width: 100%;
    }

    .store-name {
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--color-text-secondary);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .store-items {
        font-size: 0.65rem;
        color: var(--color-text-caption);
    }

    .shop-now-btn {
        min-width: 0;
        font-size: 0.7rem;
        text-transform: capitalize;
    }

    /* Responsive adjustments */
    @@media (max-width: 1200px) {
        .stores-container {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    @@media (max-width: 900px) {
        .stores-container {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @@media (max-width: 600px) {
        .stores-container {
            grid-template-columns: repeat(2, 1fr);
        }
        
        .store-card {
            padding: 10px;
        }
    }
</style>

