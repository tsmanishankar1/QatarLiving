@using MudBlazor;
@inherits NewsCardBase

<div class="news-card @(IsHorizontal ? "horizontal" : "")" @onclick="() => OnClick.InvokeAsync(news)">
    @if (string.IsNullOrEmpty(news.ImageUrl))
    {
        @* <EmptyCard Title="No Image Available" Subtitle="" /> *@
        <div class="image-placeholder">
            No image available
        </div>
    }
    else
    {
        <img src="@news.ImageUrl" alt="News Image" class="daily-news-image" />
    }
    <div class="daily-news-content @(IsHorizontal ? "ishorizontal" : "")">
        <div class="daily-news-title @(IsHorizontal ? "isTexthorizontal" : "")">@news.Title</div>
    </div>
</div>

<style>
    .news-card {
        display: flex;
        border-radius: 6px;
        overflow: hidden;
        font-family: 'Public Sans';
        width: 214px;
        @* width: 100%; *@
        flex-direction: column;
    }

    .news-card.horizontal {
        display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: flex-start;
            flex: 1 1 calc(33.333% - 1rem);
            max-width: 100%;
            height: 130px;
            padding: 10px;
            gap: 10px;
    }

    .image-placeholder {
        width: 100%;
        height: 140px;
        border-radius: 6px;
        display: flex;
        font-family: 'Public Sans', sans-serif;
        background-color: #FAFAFA;
        border-radius: 6px;
        align-items: center;
        justify-content: center;
        color: #555;
        font-size: 1rem;
    }

    .image-placeholder.ishorizontal {
        width: 100px;
        height: 177px;
        border-radius: 6px;
        display: flex;
        font-family: 'Public Sans', sans-serif;
        background-color: #FAFAFA;
        border-radius: 6px;
        align-items: center;
        justify-content: center;
        color: #555;
        font-size: 1rem;
    }

    .news-card:not(.horizontal) {
        max-width: 214px;
    }

    .daily-news-image {
        width: 100%;
        height: 121px;
        border-radius: 6px;
        object-fit: cover;
    }

    .news-card.horizontal .daily-news-image {
          width: 50%;
            /* Adjust as needed */
            height: 100%;
            border-radius: 6px;
            object-fit: cover;
    }

    .news-card.horizontal .daily-news-content {
        @* flex: 1;
        min-width: 0; *@
    }

    .daily-news-content {
        padding: 12px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        flex: 1;
        min-width: 0;
    }
    .daily-news-content.ishorizontal {
            width: 50%;
            padding: 0;
            gap: 5px;
            display: flex;
            flex-direction: column;
            justify-content: center;
    }

    .daily-news-title {
        font-size: 16px;
        font-weight: 600;
        color: var(--color-text-heading);
        line-height: 26px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .daily-news-title.isTexthorizontal {
        font-size: 16px;
        font-weight: 600;
        color: var(--color-text-heading);
        margin: 0;
         line-height: 26px;
        letter-spacing: 0;
        display: -webkit-box;
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .daily-news-title:visited,
    .daily-news-title:hover,
    .daily-news-title:active {
    color: var(--color-text-heading); 
    text-decoration: none;
    }

    /* Media Queries */
    @@media (max-width: 768px) {
        .news-card {
            flex-direction: column;
            max-width: 100%;
        }

        .daily-news-image {
            height: 100px;
            width: 177px;
        }

        .daily-news-content {
            flex: 1;
            min-width: 0;
            /* prevents text clipping */
            padding: 8px;
        }
    }

    @@media (max-width: 425px) {
        .news-card {
            @* flex-direction: row;
            width: 100%;
            margin-bottom: 5px; *@
             display: flex; /* Ensure flex layout is applied */
    flex-direction: row;
    width: 100%; /* Occupy all available horizontal space */
    margin-bottom: 5px;
    box-sizing: border-box; /* Prevent padding/border from overflowing */
        }
        

        .daily-news-image {
            width: 40%;
            max-width: 140px;
            height: auto;
            aspect-ratio: 16 / 9;
            object-fit: cover;
        }

        .daily-news-content {
            width: 60%;
            padding: 8px;
            flex: 1;
            min-width: 0;
        }
    }
    @@media (max-width: 430px) {
         .news-card {
          display: flex; 
        flex-direction: row;
        width: 100%; 
        margin-bottom: 5px;
        box-sizing: border-box; 
        }
        }
</style>
