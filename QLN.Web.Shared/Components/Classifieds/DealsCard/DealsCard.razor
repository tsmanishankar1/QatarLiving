@using MudBlazor
@using Microsoft.AspNetCore.Components

<div class="deals-card" @onclick="HandleClick" style="cursor: pointer;">
    <img src="@DealData.ImageUrl" alt="Deal Banner" class="deal-image" />

    <div class="deal-details">

        <div class="store-info">
            <img src="@DealData.StoreLogoUrl" alt="@DealData.StoreName" class="store-logo" />
            <div class="store-text">
                <div class="store-name">@DealData.StoreName</div>
                <div class="store-description">@DealData.StoreDescription</div>
            </div>
        </div>

        <div class="location-time">
            <div class="location">
                <MudIcon Icon="@Icons.Material.Filled.LocationOn" Size="Size.Small" />
                <span>@DealData.Location</span>
            </div>
            <div class="expiry">@DealData.ExpiryText</div>
        </div>
    </div>
</div>
@code {
    [Parameter] public DealModel DealData { get; set; } = default!;
    [Parameter] public EventCallback OnClick { get; set; }

    private async Task HandleClick()
    {
        await OnClick.InvokeAsync();
    }
}
<style>
    .deals-card {
        font-family: 'Public Sans', sans-serif;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        transition: all 0.3s ease;
        flex: 1 1 auto;
        max-width: 100%;
        height: 100%;
    }

    .deals-card:hover {
        transform: translateY(-5px);
    }

    .deal-image {
        width: 100%;
        height: 300px;
        object-fit: cover;
        flex-shrink: 0;
    }

    .deal-details {
        padding: 14px;
    }


    .store-info {
        display: flex;
        align-items: center;
        margin-bottom: 12px;
    }

    .store-logo {
        width: 28px;
        height: 28px;
        object-fit: contain;
        margin-right: 10px;
    }

    .store-text .store-name {
        font-weight: 500;
        font-size: 14px;
        color: var(--color-text-heading);

    }

    .store-text .store-description {
        font-weight: 400;
        font-size: 10px;
        color: var(--color-text-heading);
    }

    .location-time {
        display: flex;
        justify-content: space-between;
        font-size: 10px;
        font-weight: 500;
        color: var(--color-text-descripton);
        align-items: center;
    }

    .expiry {
        color: var(--color-accent);
        font-size: 10px;
        font-weight: 400;
    }
</style>
