<MudPaper Elevation="1" Square Class="subscription-card" Style="@($"border: 2px solid {BorderColor};")" @onclick="OnClick">
    <div class="card-content">
        <div class="card-header">
            <MudText Typo="Typo.h6" Class="card-title">@Title</MudText>
            <MudText Typo="Typo.subtitle1" Class="card-duration">@Duration</MudText>
        </div>

        <div class="price-box" style="@($"background-color: {BorderColor};")">
            <MudText Typo="Typo.caption" Class="price-label">from</MudText>
            <MudText Typo="Typo.h4" Class="price-amount">@Price QAR</MudText>
            <MudText Typo="Typo.caption" Class="price-duration">for @PriceDuration</MudText>
        </div>

        <div class="features-list">
            @foreach (var feature in Features)
            {
                <MudText Typo="Typo.body2" Class="feature-item">@feature</MudText>
            }
        </div>
    </div>
</MudPaper>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Duration { get; set; }
    [Parameter] public string Price { get; set; }
    [Parameter] public string PriceDuration { get; set; }
    [Parameter] public string[] Features { get; set; }
    [Parameter] public string BorderColor { get; set; } = "#FBE7C6";
    [Parameter] public EventCallback OnClick { get; set; }
}
