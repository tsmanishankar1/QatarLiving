<div style="display: flex; flex-direction: column; gap: 20px; width: 100%; padding: 20px 0;">

    <!-- Title Section -->
    <div style="font-size: 28px; font-weight: 600; display: flex; align-items: center; gap: 6px;">
        <span style="color: #F37021;">IN</span>
        <span style="color: #003F69;">the Know</span>
    </div>

    <!-- Categories -->
    <div style="display: flex; flex-wrap: wrap; gap: 16px; align-items: center;">
        @foreach (var item in DailyCategories)
        {
            <button style="
                    display: flex;
                    align-items: center;
                    padding: 10px 18px;
                    border: 1px solid #ddd;
                    border-radius: 999px;
                    background-color: white;
                    font-size: 16px;
                    font-weight: 500;
                    cursor: pointer;
                    transition: all 0.3s ease;
                ">
                <img src="@item.Icon" alt="@item.Label" style="width: 20px; height: 20px; margin-right: 10px;" />
                @item.Label
            </button>
        }

        <!-- View All Button -->
        <button style="
            background-color: #003F69;
            color: white;
            font-weight: 600;
            border: none;
            border-radius: 999px;
            padding: 10px 22px;
            font-size: 16px;
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
        ">
            View all
            <span style="font-size: 18px;">&#8594;</span> <!-- Unicode right arrow -->
        </button>
    </div>
</div>

@code {
    private List<CategoryItem> DailyCategories = new()
{
new CategoryItem { Icon = "/icons/business.svg", Label = "Business" },
new CategoryItem { Icon = "/icons/sports.svg", Label = "Sports" },
new CategoryItem { Icon = "/icons/lifestyle.svg", Label = "Lifestyle" },
new CategoryItem { Icon = "/icons/food.svg", Label = "Food & Dining" },
new CategoryItem { Icon = "/icons/travel.svg", Label = "Travel & Leisure" },
};

    public class CategoryItem
    {
        public string Icon { get; set; }
        public string Label { get; set; }
    }
}
