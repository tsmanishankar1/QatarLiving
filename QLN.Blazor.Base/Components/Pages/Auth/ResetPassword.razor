@page "/reset-password"
@inject NavigationManager NavManager
@using MudBlazor

<div class="d-flex flex-column align-start" style="padding: 60px; max-width: 600px; margin: auto;">
    <div class="d-flex mb-6" style="width: 100%; gap: 24px;">
    <MudLink OnClick="@(() => NavManager.NavigateTo("/signup"))"
         Class="fw-bold"
         Style="font-size: 14px; color: black;">
    CREATE NEW ACCOUNT
    </MudLink>
    <MudLink OnClick="@(() => NavManager.NavigateTo("/login"))"
         Class="fw-bold"
         Style="font-size: 14px; color: black;">
    LOG IN
    </MudLink>

    <MudLink OnClick="@(() => NavManager.NavigateTo("/forgot-password"))"
         Class="fw-bold"
         Style="font-size: 14px; color: black;">
    REQUEST NEW PASSWORD
    </MudLink>
    </div>
    <MudText Typo="Typo.h5" Class="mb-4">Reset Your Password</MudText>
    <MudText Typo="Typo.subtitle2" Class="mb-4">How would you like to reset your password?</MudText>

 <div style="padding: 12px 0;"> 
  <label>
    <input type="radio" name="resetOption" value="email">
    EMAIL ME A LINK TO RESET MY PASSWORD (@_email)
  </label>
</div>
    <MudButton Variant="Variant.Filled"
               Style="background-color: #4267B2; color: white; font-weight: bold; width: 100px;"
               OnClick="GoNext">
        Next
    </MudButton>
</div>

@code {
    private string _input = string.Empty;
    private string _email = "sample@gmail.com";
    private string ResetOptionLabel => $"EMAIL ME A LINK TO RESET MY PASSWORD {_email}";

    private void GoNext()
    {
        Console.WriteLine($"User entered: {_input}");
    }
}