@using MudBlazor

<MudDialog Style="width:400px">
    <DialogContent>
        <MudPaper Elevation="0" Class="p-6 d-flex flex-column align-items-center">
            <img src="/qln-images/success_icon.svg"
                 alt="Discard Icon"
                 style="width: 48px; height: 48px;" />

            <MudText Typo="Typo.h6" Class="mb-1">Delete Article</MudText>
            <MudText Typo="Typo.body2" Align="Align.Center" Class="my-5">
                Are you sure you want to delete this article?
            </MudText>

            <MudGrid GutterSize="0" Class="mb-2">
                <MudItem xs="6">
                    <MudButton OnClick="Cancel" Variant="Variant.Filled" Class="w-100" Style="background-color: #FFFFFF; color:#242424; border-color: #D5D7DA;text-transform: capitalize;">Cancel</MudButton>
                </MudItem>
                <MudItem xs="6">
                    <MudButton Variant="Variant.Filled" FullWidth="true" OnClick="Confirm" Style="background-color: #FF7F38; color:white;text-transform: capitalize;">
                        Delete
                    </MudButton>
                </MudItem>
            </MudGrid>
        </MudPaper>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;

    void Cancel() => MudDialog.Cancel();
    void Confirm() => MudDialog.Close(DialogResult.Ok(true));
}