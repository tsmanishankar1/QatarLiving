    }

    .pagination-button:hover {
        background-color: #F9FAFB;
        color: #344054;
    }


    .pagination-icon {
        color: #667085;
    }


    .custom-pagination .mud-button {
        font-weight: 500;
        color: #667085;
        background-color: transparent;
        border-radius: 8px;
        min-width: 36px;
