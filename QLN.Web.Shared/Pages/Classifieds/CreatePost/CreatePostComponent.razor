@page "/qln/classifieds/createform"
@using QLN.Web.Shared.Components.BreadCrumb
@using QLN.Web.Shared.Pages.Classifieds.CreatePost.Components
@using MudBlazor
@inherits CreatePostComponentBase

<div class="form-wrapper">
     <div class="max-container">
    <Breadcrumb Items="breadcrumbItems" />

    <div Class="form-container">
        <MudGrid GutterSize="24px">
            <MudItem xs="12" md="5">
                <CreateFormList TItem="string" @ref="formRef" CategoryTrees="CategoryTrees" CategoryChanged="HandleCategoryChanged" />
            </MudItem>

            <MudItem xs="12" md="7">
                @if (!string.IsNullOrWhiteSpace(selectedVertical))
                {
                    <UploadPhotos @ref="photoRef" />
                }
            </MudItem>
        </MudGrid>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(selectedVertical))
    {
        <div class="d-flex justify-end mt-4">
            <MudButton Variant="Variant.Outlined" Class="close-button">Close</MudButton>
            <MudButton Class="ml-2 save-button" Variant="Variant.Filled" OnClick="SaveForm">
                Save & Publish
            </MudButton>
        </div>
    }
</div>

<style>
    .form-wrapper {
        background-color: var(--color-secondary-background);
        padding: 10px 0;
        font-family: 'Public Sans', sans-serif;

    }

   .max-container {
            max-width: 1170px;
            margin: 0 auto;
        }

    .form-container {
        padding: 10px 0;
        background-color: transparent;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .close-button {
        background-color: var(--color-background);
        color: var(--color-text-heading);
        border-radius: 6px;
        width: 200px;
        font-weight: 600;
        text-transform: capitalize;
        border: 1px solid var(--color-captcha-box);
    }

    .save-button {
        background-color: var(--color-accent);
        color: var(--color-background);
        border-radius: 6px;
        width: 200px;
        font-weight: 600;
        text-transform: capitalize;
    }

    @@media (min-width: 960px) {
        .form-container .mud-grid {
            align-items: start;
        }
    }
</style>
