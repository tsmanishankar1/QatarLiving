@using Microsoft.AspNetCore.Components
@inject NavigationManager Navigation


<div class="modal-backdrop" style="@((Open) ? "display: block;" : "display: none;")">
    <div class="modal-dialog">
        <div class="modal-header">
            <button class="close-button" @onclick="OnClose">Ã—</button>
            @if (Type == "success")
            {
                <i class="fas fa-check-circle modal-icon success-icon"></i>
            }
            else
            {
                <i class="fas fa-exclamation-triangle modal-icon error-icon"></i>
            }
            <h3 style="color:@(Type == "success" ? "#4CAF50" : "#F44336")">@Header</h3>
        </div>
        <div class="modal-body">
            <p>@Body</p>
        </div>
        <div class="modal-footer">
            @if (ShowLogout)
            {
                <button class="btn btn-primary" @onclick="Logout">Logout</button>
            }
            else
            {
                <button class="btn btn-primary" @onclick="OnClose">Done</button>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public bool Open { get; set; }
    [Parameter] public string Type { get; set; } = "error";
    [Parameter] public string Header { get; set; }
    [Parameter] public string Body { get; set; }
    [Parameter] public bool ShowLogout { get; set; } = false;
    [Parameter] public EventCallback OnClose { get; set; }

    private void Logout()
    {
        Navigation.NavigateTo("/logout", forceLoad: true);
    }
}
<style>
    .modal-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1050;
    display: flex;
    justify-content: center;
    align-items: center;
}

.modal-dialog {
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
    max-width: 400px;
    width: 100%;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
}

.modal-header h3 {
    margin: 0;
}

.modal-icon {
    font-size: 50px;
    margin-bottom: 15px;
}

.success-icon {
    color: #4CAF50;
}

.error-icon {
    color: #F44336;
}

.modal-footer {
    text-align: center;
    margin-top: 20px;
}
</style>