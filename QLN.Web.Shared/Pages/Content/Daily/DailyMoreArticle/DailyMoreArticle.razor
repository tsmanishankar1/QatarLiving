@inherits DailyMoreArticleBase
<div class="more-articles side-spacing" style="padding-top: 20px;">
    <h3 class="section-heading">
        <span class="accent-bar"></span>More Articles
    </h3>

    @foreach (var article in Articles)
    {
        <div class="article-entry">
            <div class="article-content">
                <a href="@article.Url" class="article-title">@article.Title</a>
            </div>
            @if (!string.IsNullOrWhiteSpace(article.ImageUrl))
            {
                <img src="@article.ImageUrl" class="article-image" />
            }
        </div>
    }
</div>

<style>
    .section-heading {
        display: flex;
        align-items: center;
        font-family: 'Public Sans', sans-serif;
        font-size: 25px;
        font-weight: 600;
        color: var(--color-text-heading);
    }

    .accent-bar {
        display: inline-block;
        width: 6px;
        height: 26px;
        background-color: var(--color-primary);
        margin-right: 8px;
    }

    .more-articles {
        max-width: 600px;
        font-family: 'Public Sans', sans-serif;
    }

    .heading-style {
        margin-right: 4px;
        font-size: 25px;
        font-weight: 600;
        font-family: 'Public Sans', sans-serif;
        color: var(--color-text-heading);
    }

    h3 {
        font-size: 20px;
        margin-bottom: 20px;
    }

    .article-entry {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        padding: 12px 0;
        border-bottom: 1px solid #F0F0F0;
    }

    .article-entry:last-child {
        border-bottom: none;
    }

    .article-content {
        flex: 1;
        padding-right: 12px;
    }

    .article-meta {
        color: #FF7F38;
        font-weight: 600;
        font-size: 14px;
        margin-bottom: 4px;
    }

    .article-title {
        display: block;
        font-size: 16px;
        font-weight: 600;
        font-family: 'Public Sans', sans-serif;
        text-decoration: none;
        color: var(--color-text-heading);
        line-height: 1.4;
    }

    .article-title:hover {
        text-decoration: underline;
        color: var(--color-primary);
    }

    .article-image {
        width: 124px;
        height: 70px;
        border-radius: 6px;
        object-fit: cover;
    }

    @@media (max-width: 768px) {
        .side-spacing {
            padding-right: 16px;
            padding-left: 16px;
        }
    }
</style>
