@page "/content/news"
@inherits NewsBase
@using MudBlazor
@using QLN.Web.Shared.Pages.Content.News.NewsCard
@using QLN.Web.Shared.Pages.Content.News.NewsLetter
@using QLN.Web.Shared.Pages.Content.News.PopularArticles
@using QLN.Web.Shared.Pages.Content.News.VideoCards
@using QLN.Web.Shared.Components.ViewToggleButtons
@using QLN.Web.Shared.Pages.Content.News.MoreArticle
@inject IJSRuntime JSRuntime
@using QLN.Web.Shared.Components.Carousel
<MudGrid Class="full-width" Justify="Justify.Center" >
    <MudItem xs="12">
    <div class="carousel-padding">
        <CarouselBanner ImageUrls="carouselImages"
                        ShowArrows="true"
                        EnableSwipeGesture="true"
                        AutoCycle="true"
                        Transition="Transition.Slide" />
    </div>
    </MudItem>
    <MudItem xs="12" Class="d-flex justify-center">
        <ViewToggleButtons Items="@_viewOptions" SelectedValue="@_selectedView" OnSelected="SetViewMode" />
    </MudItem>

    <MudItem xs="12" Class="news-tabs-wrapper">
        <div class="news-tabs">
            @foreach (var tab in Tabs)
            {
                <div class="news-tab @(tab == SelectedTab ? "active" : "")" @onclick="() => SelectTab(tab)">
                    @tab
                </div>
            }
        </div>
    </MudItem>

    <!-- Main Article and MoreArticles section -->
      <div class="news-container"> 
         <div class="side-padding" style="display: flex; flex-wrap: wrap; gap: 0px;">
    <MudItem xs="12" md="8">
        <div class="main-article">
            <div class="main-content">
                <div class="main-category">
                    <img src="/images/sample_news.svg" class="main-image" />
                    <h3 class="category-style">Sports</h3>
                    <h2 class="main-title">Al Sadd lift fourth Qatar Cup title with thrilling win over Al Duhail</h2>
                    <div class="author-wrapper">
                        <div class="main-author">
                            Ismat Zerin â€¢ <a href="#" class="main-source">Qatar Living</a>  
                            <img src="/images/tick.svg" alt="Qatarliving" />
                        </div>
                         <div class="comment-badge">
                            <img src="/images/comment_icon.svg" alt="Comments" class="comment-icon" />
                            <span class="count">12</span>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
    </MudItem>

    <MudItem xs="12" md="4">
        <MoreArticle />
    </MudItem>
     </div>  
    <!-- Recommended Cards -->
   <MudItem xs="12" Class="side-padding py-2">
   <div class="flex-container">
        @for (int i = 0; i < 5; i++)
        {
                <NewsCard Item="GoldNews" IsHorizontal="false" />
        }
        </div>
    </MudItem>
    <!-- Video Cards -->
     <MudItem xs="12">
    <div class="carousel-padding">
        <CarouselBanner ImageUrls="carouselImages"
                        ShowArrows="true"
                        EnableSwipeGesture="true"
                        AutoCycle="true"
                        Transition="Transition.Slide" />
    </div>
    </MudItem>
     </div> 
     <MudItem xs="12">
         <div class="side-padding">
       <VideoCards />
       </div>
     </MudItem>

    <!-- More Cards -->
    <MudItem xs="12" Class="side-padding py-2">
   <div class="flex-container">
        @for (int i = 0; i < 3; i++)
        {
                <NewsCard Item="GoldNews" IsHorizontal="false" />
        }
        </div>
    </MudItem>
    <!-- Popular Articles & Ads -->
        @* <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="section-container">
<MudGrid Class="poular-article-container">
    <MudItem xs="12" md="8">
        <div class="poular-article-container">  

            <PopularArticles />
         <MudItem/>
          <MudItem xs="12" md="4">
            <img src="/images/classifieds/detail_ad.svg" alt="Product Image" />
                 </MudItem>
         </div>  
    </MudItem>
    </MudGrid>
    </MudContainer>  *@
     <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="section-container side-padding">
    <MudItem xs="12">
        <div class="poular-article-container">
            <PopularArticles />
            <img src="/images/classifieds/detail_ad.svg" alt="Product Image" />
        </div>
    </MudItem>
</MudContainer> 

    <!-- Even Better -->
    <MudItem xs="12" Class="side-padding py-2">
         <MudText Typo="Typo.h5">Even Better</MudText>
   <div class="flex-container">
        @for (int i = 0; i < 3; i++)
        {
                <NewsCard Item="GoldNews" IsHorizontal="false" />
        }
            <NewsLetter />
        </div>
    </MudItem>
</MudGrid>

<style>
    .full-width {
    @* width: 100%; *@
    background-color: var(--color-secondary-background)
}
.news-container{
    background-color: white;
    @* width: 100%; *@
}
   
    .news-tabs {
    width: 100%;
    display: flex;
    overflow-x: auto;
    @* padding: 8px 16px; *@
    gap: 8px;
    white-space: nowrap;
    justify-content: space-between;
    padding: 0px 100px;
}
.author-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
}
.horizontal-scroll-wrapper {
    gap: 10px;
}  
.news-tabs-wrapper{
     width: 100%;
}
.news-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
}



.news-tab {
    padding: 10px 20px;
    font-weight: 600;
    color: #444;
    border-radius: 4px;
    cursor: pointer;
    flex-shrink: 0;
}


.main-category {
    border: 1px solid #F0F0F0; 
    border-radius: 8px;     
    padding: 16px;           
    box-sizing: border-box; 
}

.news-tab.active {
    color: var(--color-accent);
    background-color: white;
    border-bottom: 2px solid var(--color-accent);
}

.main-article {
    background: white;
    border-radius: 8px;
    padding: 16px;
    display: flex;
    flex-direction: column;
}

.main-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
}
.carousel-padding {
    padding-left: 98px;
    padding-right: 98px;
}
.side-padding {
    padding-left: 98px;
    padding-right: 98px;
}

.comment-badge {
    display: flex;
    align-items: center;
    border: 1px solid #E3E3E3;
    border-radius: 20px;
    padding: 4px 8px;
    gap: 4px;
}
.news-layout {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: flex-start;
    gap: 24px;
    flex-wrap: wrap; /* fallback to wrap if needed */
}
@* .container-style {
    display: flex;
    flex-direction: row;
} *@
.flex-container {
    display: flex;
    flex-wrap: wrap;
    gap: 30px; /* 30px gap between items */
}
@* .news-grid {
    flex: 2;
    max-width: 800px;
} *@

.newsletter-container {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    max-width: 400px;
}
.mud-grid-spacing-xs-6 {
    width: calc(100% + 24px);
    margin-left: -24px;
    margin-top: 0px; 
}
.poular-article-container{
     display: flex;
    flex-direction: row;
    justify-content: space-between;
    gap: 0px;
    align-items: flex-start;
    padding: 0px ;
    width: 100%;
}

/* Mobile-first responsive behavior */
@@media (max-width: 600px) {
    .news-layout {
        flex-direction: column;
        align-items: center;
    }
    .carousel-padding {
    padding-left: 0px;
    padding-right: 0px;
}
.side-padding {
    padding-left: 30px;
    padding-right: 30px;
}
 .horizontal-scroll-wrapper {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    .news-grid {
        display: flex;
        flex-wrap: nowrap;
        gap: 12px;
        width: max-content;
    }

    .news-grid > .mud-grid-item {
        flex: 0 0 auto;
    }
    .mud-grid-spacing-xs-6>.mud-grid-item {
    padding-left: 24px;
    padding-top: 0px;
}
.poular-article-container{
    display: flex;
    flex-direction: column;
    gap: 35px;
    align-items: center;
    width: 100%;
}
}

</style>