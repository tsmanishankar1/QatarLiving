@using MudBlazor

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">

    <!-- Main Grid -->
    <MudGrid>

        <!-- Left Content Column -->
        <MudItem xs="12" md="8">
            <!-- Main Article Card Placeholder -->
            <MudCard Class="mb-4">
                <MudSkeleton Height="200px" Width="100%" Animation="Animation.Wave" />
                <MudCardContent>
                    <MudSkeleton Width="30%" Height="20px" Animation="Animation.Wave" />
                    <MudSkeleton Width="60%" Height="30px" Class="my-2" Animation="Animation.Wave" />
                    <MudSkeleton Width="40%" Height="20px" Animation="Animation.Wave" />
                </MudCardContent>
                <MudCardActions>
                    <MudSkeleton Width="40px" Height="20px" Animation="Animation.Wave" />
                </MudCardActions>
            </MudCard>

            <!-- Article Grid Below -->
            <MudGrid GutterSize="3">
                @for (int i = 0; i < 3; i++)
                {
                    <MudItem xs="12" md="4">
                        <MudCard>
                            <MudSkeleton Height="120px" Width="100%" Animation="Animation.Wave" />
                            <MudCardContent>
                                <MudSkeleton Width="100%" Height="18px" Animation="Animation.Wave" />
                                <MudSkeleton Width="60%" Height="16px" Animation="Animation.Wave" />
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
                }
            </MudGrid>
        </MudItem>

        <!-- Right Sidebar Column -->
        <MudItem xs="12" md="4">
            <MudPaper Class="p-3 mb-4">
                <MudSkeleton Width="60%" Height="24px" Class="mb-3" Animation="Animation.Wave" />

                @for (int i = 0; i < 5; i++)
                {
                    <MudGrid Class="mb-2">
                        <MudItem xs="4">
                            <MudSkeleton Width="100%" Height="60px" Animation="Animation.Wave" />
                        </MudItem>
                        <MudItem xs="8">
                            <MudSkeleton Width="100%" Height="16px" Animation="Animation.Wave" />
                            <MudSkeleton Width="80%" Height="14px" Animation="Animation.Wave" />
                        </MudItem>
                    </MudGrid>
                }
            </MudPaper>

            <!-- Newsletter Box -->
            <MudPaper Class="p-3">
                <MudSkeleton Width="70%" Height="22px" Animation="Animation.Wave" Class="mb-2" />
                <MudSkeleton Width="100%" Height="40px" Animation="Animation.Wave" Class="mb-2" />
                <MudSkeleton Width="100%" Height="36px" Animation="Animation.Wave" />
            </MudPaper>
        </MudItem>

    </MudGrid>
</MudContainer>