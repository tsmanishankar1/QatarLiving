@using MudBlazor;
@inherits NewsCardBase
<div class="news-card @(IsHorizontal ? "horizontal" : "")" @onclick="() => OnClick.InvokeAsync(news)">
    <img src="@news.ImageUrl" alt="News Image" class="news-image @(IsHorizontal ? "horizontal-image" : "")" />
    <div class="news-content @(IsHorizontal ? "horizontal-content" : "")">
        <div class="news-title">@news.Title</div>
    </div>
</div>

<style>
   .news-card {
    display: flex;
    border-radius:6px;
    overflow: hidden;
    font-family: 'Public Sans', sans-serif;
    width: 100%;
    max-width: 214px;
    flex-direction: column;
}

.news-card.horizontal {
    flex-direction: row;
    max-width: 100%;
    align-items: center; 
    align-items: stretch;
}

.news-image {
    width: 214px;
    height: 121px;
    border-radius: 6px;
    object-fit: cover;
    flex-shrink: 0;
}

.news-image.horizontal-image {
    width: 177px;
    height: 100px;
}

.news-content {
    width: 100%;
    padding: 12px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
}

.news-content.horizontal-content {
   width: 157px;
   height: 100%;
}

.news-title {
    font-size: 16px;
    font-weight: 600;
    font-family: 'Public Sans', sans-serif;
    color: var(--color-text-heading);
    word-wrap: break-word;
    white-space: normal;
    height: 100%;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}


@@media (max-width: 768px) {
    .news-card {
        flex-direction: row;
        max-width: 100%;
        padding: 10px;
    }
    .news-image {
        width: 177px !important;
        height: 121px !important;
        flex-shrink: 0;
    }
}
</style>


