@page "/qln/classifieds/createform"
@using QLN.Web.Shared.Components.BreadCrumb
@using QLN.Web.Shared.Pages.Classifieds.CreatePost.Components
@using MudBlazor
@inherits CreatePostComponentBase

<div class="form-wrapper">
     <div class="max-container">
    <Breadcrumb Items="breadcrumbItems" />

    <div Class="form-container">
        <MudGrid GutterSize="24px">
            <MudItem xs="12" md="5">
                <CreateFormList TItem="string" adPostModel="adPostModel"  CategoryTrees="CategoryTrees" CategoryChanged="HandleCategoryChanged" />
            </MudItem>

            <MudItem xs="12" md="7">
                @if (!string.IsNullOrWhiteSpace(selectedVertical))
                {
                    <UploadPhotos PhotoUrls="@photoUrls" selectedVertical="@selectedVertical" />
                }
            </MudItem>
        </MudGrid>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(selectedVertical))
    {
        <div class="save-button-container">
            <MudButton Variant="Variant.Outlined" Class="close-button">Close</MudButton>
         <MudButton Class="ml-2 save-button"
           Variant="Variant.Filled"
           Disabled="@IsSaving"
           OnClick="SaveForm">
                @if (IsSaving)
                {
                     <MudProgressCircular Color="Color.Inherit"
                             Size="Size.Small"
                             Indeterminate="true" />
                }
                else
                {
                    <span>Save & Publish</span>
                }
            </MudButton>

        </div>
    }
</div>

<style>
    .form-wrapper {
        background-color: var(--color-secondary-background);
        padding: 10px 0;
        font-family: 'Public Sans', sans-serif;

    }

   .max-container {
            max-width: 1170px;
            margin: 0 auto;
        }
    .save-button-container {
    display: flex;
    justify-content: flex-end;
    padding: 5px;
    margin-top: 1rem; /* equivalent to mt-4 in Bootstrap (usually 16px) */
    }

    .form-container {
        padding: 10px 5px;
        background-color: transparent;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .close-button {
        background-color: var(--color-background);
        color: var(--color-text-heading);
        border-radius: 6px;
        width: 200px;
        font-weight: 600;
        text-transform: capitalize;
        border: 1px solid var(--color-captcha-box);
    }

    .save-button {
        background-color: var(--color-accent);
        color: var(--color-background);
        border-radius: 6px;
        width: 200px;
        font-weight: 600;
        text-transform: capitalize;
    }

    @@media (min-width: 960px) {
        .form-container .mud-grid {
            align-items: start;
        }
    }
</style>
