@using MudBlazor


<MudDialog Style="height: 400px">
    <DialogContent>
        <MudPaper Class="p-6 d-flex flex-column align-items-center" Style="border: 2px dotted purple; border-radius: 12px;">
            <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Large" Style="font-size: 48px;" />
            <MudText Typo="Typo.h6" Class="mt-2 mb-4">Article Published</MudText>
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close" Color="Color.Warning" Variant="Variant.Filled" Class="w-100">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    void Close() => MudDialog.Close(DialogResult.Ok(true));
}

