@page "/content/news"
@inherits NewsBase
@layout ContentLayout
@using MudBlazor
@using QLN.Web.Shared.Pages.Content.News.NewsCard
@using QLN.Web.Shared.Pages.Content.News.NewsLetter
@using QLN.Web.Shared.Pages.Content.News.PopularArticles
@using QLN.Web.Shared.Pages.Content.News.VideoCards
@using QLN.Web.Shared.Components.ViewToggleButtons
@using QLN.Web.Shared.Pages.Content.News.MoreArticle
@using QLN.Web.Shared.Pages.Content.News.Skeletons
@inject IJSRuntime JSRuntime
@using QLN.Web.Shared.Components.Carousel
<div style="width: 100%;background-color: var(--color-secondary-background);">
    <div style="max-width: 1500px; margin: 0 auto;">
<MudGrid Class="full-width" Justify="Justify.Center" >
    <MudItem xs="12">
    <div class="carousel-padding">
        <CarouselBanner ImageUrls="carouselImages"
                        ShowArrows="true"
                        EnableSwipeGesture="true"
                        AutoCycle="true"
                        Transition="Transition.Slide" />
    </div>
    </MudItem>
     <MudItem xs="12" Class="d-flex justify-center py-3">
        <ViewToggleButtons Items="@_viewOptions" SelectedValue="@_selectedView" OnSelected="SetViewMode" TextClass="custom-text"/>
    </MudItem>

    <MudItem xs="12" Class="news-tabs-wrapper">
        <div class="news-tabs">
            @foreach (var tab in Tabs)
            {
                <div class="news-tab @(tab == SelectedTab ? "active" : "")" @onclick="() => SelectTab(tab)">
                    @tab
                </div>
            }
        </div>
    </MudItem>
       <div class="news-container">   
         <div class="side-padding" style="display: flex; flex-wrap: wrap; gap: 0px;">
    <MudItem xs="12" md="8">
        <div class="main-article">
            <div class="main-content">
                <div class="main-category" @onclick="@(() => onclick(topNews))">
                    @if (isLoading){
                    <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="400px" Width="100%" Animation="Animation.Wave" />
                    }
                    else{
                    <img src="@topNews.ImageUrl" class="main-image" />
                    }
                     @if (isLoading){
                    <MudSkeleton Class="mb-2 mt-2" SkeletonType="SkeletonType.Text" Height="24px" Width="100px" Animation="Animation.Wave" />
                    <MudSkeleton Class="mb-2" SkeletonType="SkeletonType.Text" Height="30px" Width="100%" Animation="Animation.Wave" />
                    <MudSkeleton Class="mb-2" SkeletonType="SkeletonType.Text" Height="30px" Width="200px" Animation="Animation.Wave" />
                    }
                    else{
                    <span class="category-style">Sports</span>
                    <h2 class="main-title">@topNews.Title</h2>
                    <div class="author-wrapper">
                        <div class="main-author">
                            Ismat Zerin â€¢ <a href="#" class="main-source">Qatar Living</a>  
                            <img src="/images/tick.svg" alt="Qatarliving" />
                        </div>
                         <div class="comment-badge">
                            <img src="/images/comment_icon.svg" alt="Comments" class="comment-icon" />
                            <span class="count">12</span>
                        </div> 
                    </div>
                    }
                </div>
            </div>
        </div>
    </MudItem>

    <MudItem xs="12" md="4">
        <MoreArticle Articles="@moreArticleList" loading="@isLoading" selectedTab="@SelectedTab"/>
    </MudItem>
     </div>  
    <!-- Recommended Cards -->
   <MudItem xs="12" Class="side-padding py-6">
    @if (isLoading){
        <div class="skeleton-container">
         @for (int i = 0; i < 3; i++)
        {
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="0" Class="p-2 mx-2" Style="max-width: 214px;">
                <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="120px" Width="214px;" Animation="Animation.Wave" Class="mb-3 rounded" />
                <MudSkeleton SkeletonType="SkeletonType.Text" Height="20px" Width="100%" Animation="Animation.Wave" Class="mb-1" />
                <MudSkeleton SkeletonType="SkeletonType.Text" Height="20px" Width="80%" Animation="Animation.Wave" />
            </MudPaper>
        </MudItem>
        }
        <MudSkeleton SkeletonType="SkeletonType.Text" Height="400px" Width="500px" Animation="Animation.Wave" Class="mb-1 rounded" />
        </div>  
    }
    else{
   <div class="flex-container">
        @foreach (var news in moreArticleList.Take(3))
        {
             <div class="@(news == moreArticleList.Last() ? "card-image-style" : "news-card-wrapper")">  
            <NewsCard news="news" IsHorizontal="false" OnClick="() => onclick(news)"/>
             </div> 
        }
            <div class="newsletter-wrapper"> 
            <NewsLetter />
            </div>
    </div>
    }
    </MudItem>
    <!-- Video Cards -->
     <MudItem xs="12">
    <div class="carousel-padding">
        <CarouselBanner ImageUrls="carouselImages"
                        ShowArrows="true"
                        EnableSwipeGesture="true"
                        AutoCycle="true"
                        Transition="Transition.Slide" />
    </div>
    </MudItem>
     </div> 
     <MudItem xs="12">
         <div class="video-padding">
        <VideoCards Articles="@moreArticleList" selectedTab="@SelectedTab" />
       </div>
     </MudItem>

    <!-- More Cards -->
    <MudItem xs="12" Class="py-2" >
   <div class="card-container side-padding">
        @foreach (var news in moreArticleList.Take(5))
        {
         <div class="@(news == moreArticleList.Last() ? "" : "news-card-wrapper")">  
            <NewsCard news="news" IsHorizontal="false" OnClick="() => onclick(news)"/>
         </div> 
        }
        </div>
    </MudItem>
    <!-- Popular Articles & Ads -->
     <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="section-container">
    <MudItem xs="12">
         <div class="poular-article-container">
            <PopularArticles Articles="@moreArticleList" selectedTab="@SelectedTab"/>
            <img src="/images/classifieds/detail_ad.svg"  alt="Product Image" />
        </div>
    </MudItem>
</MudContainer> 
@* <div style="width: 100%;" >
<NewsCard news="topNews" IsHorizontal="true" OnClick="() => onclick(topNews)"/>
<NewsCard news="topNews" IsHorizontal="true" OnClick="() => onclick(topNews)"/>
</div> *@

    <!-- Even Better -->
     <MudGrid GutterSize="3" Class="grid-padding pb-3">
        @if(!isLoading){
        @foreach (var news in moreArticleList.Take(9))
        {
            <MudItem xs="12" sm="6" md="4"> 
                  <div class="card-wrapper">  
                    @* <div class="@(news == moreArticleList.Last() ? "" : "news-card-wrapper")">    *@
                    <NewsCard news="news" IsHorizontal="true" OnClick="() => onclick(news)"/>
                    @* </div>  *@
                 </div>  
            </MudItem>
        }
        }
    else{
    @for (int i = 0; i < 9; i++)
    {
        <MudItem xs="12" sm="6" md="4">
        <MudGrid>
        <MudItem xs="4">
            <MudSkeleton 
                SkeletonType="SkeletonType.Rectangle" 
                Height="100px" 
                Width="100%" 
                Animation="Animation.Wave" 
                Class="rounded" />
        </MudItem>
        <MudItem xs="8" Class="d-flex flex-column justify-center pl-2">
            <MudSkeleton 
                SkeletonType="SkeletonType.Text" 
                Height="20px" 
                Width="60%" 
                Animation="Animation.Wave" 
                Class="mb-1" />
            <MudSkeleton 
                SkeletonType="SkeletonType.Text" 
                Height="20px" 
                Width="60%" 
                Animation="Animation.Wave" 
                Class="mb-1" />
            <MudSkeleton 
                SkeletonType="SkeletonType.Text" 
                Height="20px" 
                Width="80%" 
                Animation="Animation.Wave" />
        </MudItem>
    </MudGrid>
        </MudItem>
    }
    }
    </MudGrid>  
        
</MudGrid>
</div>
</div>

