@inherits PublishArticleDialogBase

<MudDialog Class="pa-2 custom-dialog">
    <DialogContent>
        <div class="d-flex justify-center">
            <img class="icon-circle" src="/qln-images/success_icon.svg" alt="go-live Image" />
        </div>
        <MudText Align="Align.Center" Class="mt-4 mb-2 title-style ">
            @Title
        </MudText>
        <MudText Align="Align.Center">
            @if (SelectedTab == 3)
            {
                @("Are you sure you want to publish this article?")
            }
            else
            {
                @("Are you sure you want to unpublish this article?")
            }
        </MudText>
        <div class="mt-4 d-flex flex-column gap-2">
            @if (SelectedTab == 3)
            {
                <MudButton Variant="Variant.Filled" Class="mt-4 custom-add-btn" OnClick="OnClickPublish" Disabled="@(IsBtnDisabled)">
                    Publish
                </MudButton>
            }
            else
            {
                <MudButton Variant="Variant.Filled" Class="mt-4 custom-add-btn" OnClick="OnClickUnPublish" Disabled="@(IsBtnDisabled)">
                    UnPublish
                </MudButton>
            }
            <MudButton Variant="Variant.Outlined" OnClick="Cancel" Class="mt-2 custom-close-btn">
                Cancel
            </MudButton>
        </div>
    </DialogContent>
</MudDialog>

<style>
    .title-style {
        font-family: 'Public Sans', sans-serif;
        font-size: 18px;
        font-weight: 600;
        color: #242424;
    }

    .icon-circle {
        width: 50px;
        height: 50px;
    }

    .custom-add-btn {
        background-color: #FF7F38;
        font-size: 16px;
        font-weight: 600;
        color: white;
        text-transform: none;
    }

    .custom-close-btn {
        border-color: #D5D7DA;
        color: #242424;
        text-transform: none;
    }

    .custom-dialog {
        width: 400px;
        max-width: 90vw;
    }
</style>