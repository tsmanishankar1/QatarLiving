@inherits VideoCardsBase
@using MudBlazor;
<div class="watch-section">
    <!-- Left Side: Video List -->
    <div class="video-list">
        <h3><span class="accent-bar">|</span>Watch on Qatar Living</h3>

        @foreach (var video in VideoList)
        {
            <div class="video-card" @onclick="() => SelectVideo(video)">
                <div class="thumbnail-container">
                    <img src="@video.ThumbnailUrl" class="thumbnail" />
                    <div class="play-icon">&#9658;</div>
                </div>
                <div class="video-title">
                    @if (video == SelectedVideo)
                    {
                        <span class="selected-title">@video.Title</span>
                    }
                    else
                    {
                        <a href="#">@video.Title</a>
                    }
                </div>
            </div>
        }

        <div class="view-all">
            <a href="#">View all videos &rarr;</a>
        </div>
    </div>

    <!-- Right Side: Main Video Preview -->
     <div style="position: relative; width: 738px; height: 416px; border-radius: 12px; overflow: hidden; cursor: pointer;"
                         class="video-card"
                         @onclick="() => ToggleVideoPlay(SingleVideoCard)"
                         @onmouseenter="() => ShowPlayButton(SingleVideoCard)"
                         @onmouseleave="() => HidePlayButton(SingleVideoCard)">
                        
                        <!-- Video element -->
                        <video width="100%" height="100%" 
                               muted loop
                               style="object-fit: cover;"
                               src="@SingleVideoCard.VideoUrl"
                               @ref="SingleVideoCard.VideoElement">
                        </video>
                        
                        <!-- Play button overlay - shown on hover when not playing -->
                        @if (SingleVideoCard.ShowPlayButton)
                        {
                            <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; 
                                        display: flex; justify-content: center; align-items: center;
                                        background: rgba(0,0,0,0.3);">
                                <MudIcon Icon="@Icons.Material.Filled.PlayCircle" 
                                         Style="color:var(--color-text-white); font-size: 36px;" />
                            </div>
                        }
                    </div>
</div>




<style>
    .watch-section {
        display: flex;
        gap: 32px;
        margin: 20px auto;
        width: 100%;
        padding: 16px;
        font-family: 'Public Sans', sans-serif;
    }

    .video-list {
        width: 35%;
        height: 416px;
    }

    .video-list h2 {
        font-size: 20px;
        margin-bottom: 20px;
    }

    .video-card {
        display: flex;
        margin-bottom: 16px;
        cursor: pointer;
    }
    .accent-bar {
        color: #003865;
        font-weight: bold;
        margin-right: 4px;
    }

    .thumbnail-container {
        position: relative;
        width: 180px;
        height: 100px;
        margin-right: 12px;
    }

    .thumbnail {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 8px;
    }

    .play-icon {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 18px;
        color: white;
        background: rgba(0, 0, 0, 0.5);
        padding: 4px 6px;
        border-radius: 50%;
    }

    .video-title {
        flex: 1;
        display: flex;
        align-items: center;
        font-size: 14px;
    }

    .selected-title {
        color: #0071bc;
        font-weight: bold;
    }

    .view-all {
        margin-top: 8px;
    }

    .view-all a {
        color: #FF7F38;
        font-weight: bold;
        font-size: 14px;
        text-decoration: none;
    }

    .main-video {
        flex: 1;
        background: #fafafa;
        border-radius: 8px;
        padding: 16px;
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
    }

    .main-thumbnail {
        width: 100%;
        height: auto;
        border-radius: 8px;
    }

    .thumbnail-container.large {
        position: relative;
    }

    .play-icon.large {
        font-size: 32px;
        padding: 8px 12px;
    }

    .main-caption {
        margin-top: 10px;
    }

    .video-label {
        font-size: 14px;
        color: #FF7F38;
        font-weight: bold;
        display: block;
        margin-bottom: 4px;
    }

    .main-caption h3 {
        font-size: 22px;
        font-weight: bold;
    }

    @@media (max-width: 768px) {
        .watch-section {
            flex-direction: column;
        }

        .video-list, .main-video {
            width: 100%;
        }
    }
</style>