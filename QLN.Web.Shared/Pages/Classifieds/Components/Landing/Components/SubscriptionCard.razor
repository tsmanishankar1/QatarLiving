@using MudBlazor
@using static MudBlazor.Variant
@using static MudBlazor.Color

<div class="subscription-card-container">
    <MudPaper Class="promo-box" Elevation="0" Square="false">
        <MudGrid>
            <!-- Left Section -->
            <MudItem xs="12" md="6">
                <div class="promo-text">
                    <MudText Typo="Typo.h5" Class="promo-heading">
                        Ready to Grow on Qatar Living?
                    </MudText>
                    <MudText Typo="Typo.body1" Class="promo-description">
                        Gain more visibility, attract the right audience, and grow your presence with powerful features built to help you succeed.
                    </MudText>
                    <MudButton   Class="subscribe-btn" OnClick="@OnSubscribeClick">
                        Subscribe Now
                    </MudButton>
                </div>
            </MudItem>

            <!-- Right Section -->
            <MudItem xs="12" md="6" Class="d-flex justify-end align-center">
                <img src="images/classifieds/growth_chart.svg" alt="Growth Chart" class="promo-image" />
            </MudItem> 
        </MudGrid>
    </MudPaper>
</div>

<style>
/* Outer Margin */
.subscription-card-container {
    width: 100%;
    margin: 100px 0 0 0;
    padding: 0 16px; 
    box-sizing: border-box;
    font-family: 'Public Sans', sans-serif;
}

/* Paper Styling */
.promo-box {
    padding: 2rem;
    border-radius: 10px;
    background-color: var(--mud-palette-background);
}

/* Text Container */
.promo-text {
    padding: 1rem;
}

/* Heading Text */
.promo-heading {
    font-size: 25px !important;
    font-weight: 600;
    color: var(--color-primary); 
    margin-bottom: 1rem;
}

/* Description Text */
.promo-description {
    font-size: 16px !important;
    font-weight: 500;
    color: var(--color-text-descripton);
    margin-bottom: 1.5rem;
}

/* Button Styling */
.subscribe-btn {
    background-color: var(--color-accent);
    color: var(--color-text-white);
    font-weight: 600;
    font-size: 16px !important;
    padding: 0.75rem 1.5rem;
    width: fit-content;
    border-radius: 4px;
    font-family: 'Public Sans', sans-serif;
    text-transform: none !important;
}

.promo-image {
     width: 508px !important;
    height: 200px !important;  
}
</style>


@code {
    [Parameter]
    public EventCallback OnSubscribeClick { get; set; }
}
