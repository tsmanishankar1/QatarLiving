@using MudBlazor
@using QLN.Common.DTO_s
@using QLN.Web.Shared.Components.Classifieds.FeaturedItemCard
@using QLN.Web.Shared.Components.EmptyCard
@using QLN.Web.Shared.Pages.Classifieds.Landing.Components.Skeletons.FeaturedItemSkeleton
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@using System.Threading.Tasks;
@inherits FeaturedItemsBase

<div class="featured-cards-section">
    <div class="featured-header">
        <h3 class="featured-title">Featured Items</h3>
        <h4 class="featured-title-one">Donâ€™t miss out on these deals</h4>
    </div>

    @if (Loading)
    {
        <FeaturedItemSkeleton />
    }
    else if (FeaturedItems?.Any() != true)
    {
        <EmptyCard Title="No featured items found." Subtitle="Please check back later or explore other categories." />
    }
    else
    {
        <div class="swiper-featured-container">
            <div class="swiper-featured swiper">
                <!-- Navigation arrows -->
                <div class="swiper-featured-button-prev arrow-button left">
                    <MudIcon Icon="@Icons.Material.Filled.ChevronLeft" />
                </div>
                <div class="swiper-featured-button-next arrow-button right">
                    <MudIcon Icon="@Icons.Material.Filled.ChevronRight" />
                </div>

                <div class="swiper-wrapper">
                    @foreach (var item in FeaturedItems)
                    {
                        <div class="swiper-slide swiper-slide-Card">
                            <FeaturedItemCard Item="item" OnHeartClick="HandleHeartClick" OnSelect="HandleSelect" />
                        </div>
                    }
                </div>

                <div class="swiper-featured-pagination"></div>
            </div>

        </div>
    }
</div>

<style>
    .featured-cards-section {
        padding: 2rem 0;
        font-family: 'Public Sans', sans-serif;
    }

    .featured-header {
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .featured-title {
        font-weight: 600;
        font-size: 25px;
        color: var(--color-text-heading);
    }

    .featured-title-one {
        font-weight: 400;
        font-size: 15px;
        color: var(--color-text-heading);
    }

    /* Swiper Container */
    .swiper-featured-container {
        position: relative;
        width: 100%;
    }

    .swiper-featured {
        position: relative;
        width: 100%;
        padding: 0;
    }

    .swiper-slide-Card {
        padding: 0.5rem;
        box-sizing: border-box;
    }

    .swiper-slide {
        width: auto;
        /* Remove fixed widths */
        box-sizing: border-box;
        flex-shrink: 0;
    }


    /* Navigation Buttons */
    .arrow-button {
        display: none;
        opacity: 0;
        transition: opacity 0.3s ease;
        position: absolute;
        top: 40%;
        transform: translateY(-50%);
        z-index: 10;
        background-color: white;
        border-radius: 50%;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        width: 40px;
        height: 40px;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

    .arrow-button.left {
        left: 20px;
    }

    .arrow-button.right {
        right: 20px;
    }

    /* Pagination */
    .swiper-featured-pagination {
        text-align: center;
        margin-top: 1rem;
    }

    .swiper-featured-pagination .swiper-pagination-bullet {
        width: 8px;
        /* smaller size for inactive dots */
        height: 8px;
        background: #bbb;
        border-radius: 50%;
        display: inline-block;
        margin: 0 4px;
        transition: opacity 0.3s ease;
    }

    .swiper-featured-pagination .swiper-pagination-bullet-active {
        width: 10px;
        height: 10px;
        background: #00426D;
    }


    /* Show arrows on hover (only desktop) */
    @@media (min-width: 769px) {
        .swiper-featured-container:hover .arrow-button {
            display: flex;
            opacity: 1;
        }
    }

    /* Hide arrows permanently on mobile & tablet */
    @@media (max-width: 768px) {
        .arrow-button {
            display: none !important;
        }
    }


    @@media (max-width: 768px) {
        .swiper-featured {
            padding: 0 0.5rem;
        }
    }
</style>