@page "/manage/news/addarticle"
@inherits AddArticleBase

<MudContainer MaxWidth="MaxWidth.False">
    <EditForm Model="@article" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <MudGrid GutterSize="24px">
            <!-- Left Column -->
            <MudItem xs="12" md="7">
                <MudText Class="mb-4 title-style">Article Form</MudText>

                <MudGrid GutterSize="16px" Class="mb-4">
                    <MudItem xs="4">
                        <MudSelect T="int" @bind-Value="Category.CategoryId" Class="w-100" Variant="Variant.Filled" Label="Category" Placeholder="Choose" For="@(() => Category.CategoryId)">
                            <MudSelectItem Value="@(0)">Choose</MudSelectItem>
                            @foreach (var item in Categories)
                            {
                                <MudSelectItem Value="@item.Id">@item.CategoryName</MudSelectItem>
                            }
                        </MudSelect>
                    </MudItem>

                    <MudItem xs="4">
                        <MudSelect T="int" @bind-Value="Category.SubcategoryId" Class="w-100" Variant="Variant.Filled" Label="Subcategory" Placeholder="Choose" Disabled="@(Category.CategoryId == 0)" For="@(() => Category.SubcategoryId)">
                            <MudSelectItem Value="@(0)">Choose</MudSelectItem>
                            @foreach (var item in Categories.Where(x => x.Id == Category.CategoryId))
                            {
                                <MudSelectItem Value="@item.Id">@item.CategoryName</MudSelectItem>
                            }
                        </MudSelect>
                    </MudItem>

                    <MudItem xs="3">

                        <MudSelect T="int" @bind-Value="Category.SlotId" Class="w-100" Variant="Variant.Filled" Placeholder="Slot" Disabled="@(Category.CategoryId == 0)" For="@(() => Category.SlotId)">
                            <MudSelectItem Value="@(0)">Choose</MudSelectItem>
                            @foreach (var item in Slots)
                            {
                                <MudSelectItem Value="@item.Id">@item.Name</MudSelectItem>
                            }
                        </MudSelect>
                    </MudItem>

                    <MudItem xs="1" Class="d-flex align-center">
                        <MudTooltip Text="Add">
                            <MudIconButton OnClick="AddCategory" Icon="@Icons.Material.Filled.Add" Class="rounded-circle" Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Medium" Disabled="@(Category.CategoryId == 0 && Category.SubcategoryId == 0)" />
                        </MudTooltip>
                    </MudItem>
                </MudGrid>

                @foreach (var category in TempCategoryList)
                {

                    <MudGrid GutterSize="16px" Class="mb-4">
                        <MudItem xs="4">
                            <MudSelect T="int" @bind-Value="category.CategoryId" Class="w-100" Variant="Variant.Filled" Label="Category" Placeholder="Choose" For="@(() => Category.CategoryId)">
                                <MudSelectItem Value="@(0)">Choose</MudSelectItem>
                                @foreach (var item in Categories)
                                {
                                    <MudSelectItem Value="@item.Id">@item.CategoryName</MudSelectItem>
                                }
                            </MudSelect>
                        </MudItem>

                        <MudItem xs="4">
                            <MudSelect T="int" @bind-Value="category.SubcategoryId" Class="w-100" Variant="Variant.Filled" Label="Subcategory" Placeholder="Choose" Disabled="@(Category.CategoryId == 0)" For="@(() => Category.SubcategoryId)">
                                <MudSelectItem Value="@(0)">Choose</MudSelectItem>
                                @foreach (var item in Categories.Where(x => x.Id == Category.CategoryId))
                                {
                                    <MudSelectItem Value="@item.Id">@item.CategoryName</MudSelectItem>
                                }
                            </MudSelect>
                        </MudItem>

                        <MudItem xs="3">

                            <MudSelect T="int" @bind-Value="Category.SlotId" Class="w-100" Variant="Variant.Filled" Placeholder="Slot" Disabled="@(Category.CategoryId == 0)" For="@(() => Category.SlotId)">
                                <MudSelectItem Value="@(0)">Choose</MudSelectItem>
                                @foreach (var item in Slots)
                                {
                                    <MudSelectItem Value="@item.Id">@item.Name</MudSelectItem>
                                }
                            </MudSelect>
                        </MudItem>

                        <MudItem xs="1" Class="d-flex align-center">
                            <MudTooltip Text="Remove">
                                <MudIconButton OnClick="@(() => RemoveCategory(category))" Icon="@Icons.Material.Filled.Remove" Class="rounded-circle" Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Medium" />
                            </MudTooltip>
                        </MudItem>
                    </MudGrid>

                }

                <MudSelect T="string" @bind-Value="article.WriterTag" Label="Writer" Variant="Variant.Filled" Placeholder="Choose" Class="mt-4 w-100" For="@(() => article.WriterTag)">
                    @foreach (var item in WriterTags)
                    {
                        <MudSelectItem Value="@item">@item</MudSelectItem>
                    }
                </MudSelect>

                <MudTextField Label="Article Title" Variant="Variant.Filled" Class="mt-4 w-100" @bind-Value="article.Title" For="@(() => article.Title)" />

                <MudText Typo="Typo.body2" Class="mt-4 mb-1">Article content</MudText>
                <MudExRichTextEdit @bind-Value="article.Content" @ref="@Editor"
                                   Height="444"
                                   Class="m-2"
                                   Placeholder="Start Typing"
                                   For="@(() => article.Content)">
                </MudExRichTextEdit>
                <MudStack Row Class="mt-6 justify-content-between">
                    <MudButton Class="action-btn rounded-lg" Variant="Variant.Filled" Color="Color.Default" OnClick="@Cancel">Cancel</MudButton>
                    <MudButton Class="ml-2 rounded-lg action-btn" ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Save</MudButton>
                </MudStack>
            </MudItem>

            <!-- Right Column -->
            <MudItem xs="12" md="5">
                <MudText Class="mb-4 title-style">Images</MudText>

                <!-- Cover Image Upload -->
                <InputFile id="cover-upload" OnChange="HandleCoverImageChange" style="display:none" />

                <MudFileUpload T="IBrowserFile" Accept="image/*" FilesChanged="HandleCoverImageChange" MaxFileSize="10485760">
                    <ActivatorContent>
                        <MudPaper Class="pa-6 d-flex flex-column align-center justify-center" Style="min-height: 200px; border: 1px dashed #ccc; cursor: pointer;" OnClick="TriggerCoverUpload">
                            <MudIcon Icon="@Icons.Material.Filled.CloudUpload" Size="Size.Large" Color="Color.Primary" />
                            <div class="mt-2" style="color: #ff5722;">Cover Image</div>
                            <MudText Typo="Typo.caption" Class="mt-2">Recommended image size: 1600 x 900 pixels</MudText>
                        </MudPaper>

                        <MudPaper Elevation="1"
                                  Class="d-flex flex-column align-center justify-center mt-4 p-2"
                                  Style="height: 240px; width:240px; border: 2px dashed #ccc; cursor: pointer;">
                            @if (!string.IsNullOrEmpty(article.CoverImageUrl))
                            {
                                <img src="@($"data:image/*;base64,{article.CoverImageUrl}")"
                                     alt="Company Logo"
                                     style="max-height: 100%; max-width: 100%; object-fit: contain;" />
                                <div style=" position: absolute;bottom: 0;color:white;width:240px;  height: 24px; background-color: #000000CC;display: flex;justify-content: center; align-items: center;gap: 8px;">

                                </div>
                            }
                            else
                            {
                                <div style="width: 64px; height: 64px; background-color: #E0E0E0; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                    <img src="/qln-images/Upload.svg" alt="Upload" style="height: 48px;" />
                                </div>
                                <MudText style="margin-top: 8px; color: #FF7F38; font-size: 14px; font-weight: 500;">Upload image</MudText>
                            }

                        </MudPaper>

                    </ActivatorContent>
                </MudFileUpload>

            </MudItem>
        </MudGrid>
    </EditForm>
</MudContainer>


<style>
    .action-btn {
        height: 40px;
        width: 230px;
    }

    .title-style {
        font-family: 'Public Sans', sans-serif;
        font-size: 18px;
        font-weight: 600;
        color: #00426D;
        text-transform: none;
    }

</style>
