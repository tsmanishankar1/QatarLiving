@using MudBlazor

<div class="custom-alert-box">
    <div class="icon-container">
        <MudIcon Icon="@Icons.Material.Filled.Info" Size="Size.Medium" Color="Color.Warning" />
    </div>

    <div class="text-container">
        <h3>Login Required</h3>
        <p>You need to log in to create a post. Please log in or sign up to continue.</p>
    </div>

    <div class="button-container">
        <MudButton Color="Color.Warning" Variant="Variant.Filled" OnClick="@OnLoginClicked">
            Login
        </MudButton>
    </div>
</div>

@code {
    void OnLoginClicked()
    {
        // Navigate to login or show login dialog
    }
}
