@namespace QLN.Web.Shared.Components.BreadCrumb
@using Microsoft.AspNetCore.Components
@using System.Collections.Generic

<div class="breadcrumb-wrapper">

    <div class="breadcrumb-trail">
        <MudLink href="/" class="breadcrumb-link home-link">
            <img src="/qln-images/components/Home.svg" class="home-icon" alt="Home" />
        </MudLink> <span class="breadcrumb-separator">></span>

        @foreach (var item in Items.Select((value, index) => new { value, index }))
        {
            @if (!string.IsNullOrEmpty(item.value.Url) && !item.value.IsLast)
            {
                <MudLink href="@item.value.Url" class="breadcrumb-link">
                    <span class="breadcrumb-label">@item.value.Label</span>
                </MudLink>

            }
            else
            {
                <span class="breadcrumb-text">
                    <span class="breadcrumb-label">@item.value.Label</span>
                </span>

            }

            @if (!item.value.IsLast)
            {
                <span class="breadcrumb-separator">></span>
            }
        }
    </div>
    @*  <div class="back-link">
        <MudLink href="@BackLinkUrl"> <span class="breadcrumb-text">Back to</span> @BackLinkText</MudLink>
    </div> *@
</div>

@code {
    [Parameter]
    public List<BreadcrumbItem> Items { get; set; } = new();

    [Parameter]
    public string BackLinkUrl { get; set; } = "#";

    [Parameter]
    public string BackLinkText { get; set; } = "Living Rewards";
}

<style>
