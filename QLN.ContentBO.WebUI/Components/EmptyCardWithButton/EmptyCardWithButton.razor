@using Microsoft.AspNetCore.Components

<div class="empty-state-card">
    <img src="/qln-images/emty_icon.svg" alt="Empty Icon" class="empty-icon" />
    <h3 class="empty-title">@Title</h3>

    @if (!string.IsNullOrWhiteSpace(Subtitle))
    {
        <p class="empty-subtitle">@Subtitle</p>
    }

        <button class="empty-action-button" @onclick="OnButtonClick">
            @ButtonText
        </button>
</div>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Subtitle { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Action";
    [Parameter] public EventCallback OnButtonClick { get; set; }
}
<style>
    .empty-state-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 40px 20px;
        border-radius: 8px;
        max-width: 400px;
        margin: auto;
    }

    .empty-icon {
        width: 60px;
        height: 60px;
        margin-bottom: 20px;
    }

    .empty-title {
        font-size: 16px;
        font-weight: 500;
        color: var(--color-text-heading);
        margin-bottom: 8px;
    }

    .empty-subtitle {
        font-size: 14px;
        font-weight: 400;
        color: var(--color-text-description);
        max-width: 320px;
        margin-bottom: 20px;
    }

    .empty-action-button {
        border: 1px solid var(--mud-palette-primary);
        background: transparent;
        color: var(--mud-palette-primary);
        padding: 8px 20px;
        border-radius: 6px;
        font-size: 14px;
        cursor: pointer;
        transition: background 0.3s;
    }

    .empty-action-button:hover {
        background: var(--mud-palette-primary);
        color: white;
    }
</style>
