@page "/events/details/{*slug}"
@using QLN.Web.Shared.Components.Carousel
@using MudBlazor
@using QLN.Web.Shared.Pages.Content.Events.EventDetails
@layout ContentLayout
@using QLN.Web.Shared.Components.BreadCrumb
@inherits EventDetailsBase

<div style="width: 100%; background-color: var(--color-secondary-background);">
    <div class="responsive-container">

        <CarouselBanner ImageUrls="carouselImages" ShowArrows="true" EnableSwipeGesture="false" AutoCycle="true"
            Transition="Transition.Slide" />

        <Breadcrumb Items="breadcrumbItems" />

        @if (isLoading)
        {
            <EventdetailsSkeletons />
        }
        else if (eventDetails != null)
        {
            <EventDetailsSection item="eventDetails" />
        }
        else
        {
            <MudText Color="Color.Error">Failed to load event details.</MudText>
        }

    </div>
</div>

<style>
    .responsive-container {
        width: 100%;
        padding: 0 40px;
        box-sizing: border-box;
        max-width: 1170px;
        margin: 0 auto;
    }

    @@media (max-width: 768px) {
        .responsive-container {
            padding: 0 16px;
        }
    }

    @@media (max-width: 480px) {
        .responsive-container {
            padding: 0 5px;
        }
    }
</style>
