@using MudBlazor;
@inherits NewsCardV2Base

<MudLink Href="@Href" Style="text-decoration: none;">
    <div class="news-card @(IsHorizontal ? "horizontal" : "")">
    @if (string.IsNullOrEmpty(news.ImageUrl))
    {
        <div class="image-placeholder">
            No image available
        </div>
    }
    else
    {
        @if (!imageLoaded)
        {
            <MudSkeleton SkeletonType="SkeletonType.Rectangle" Class="daily-news-image" />
        }
        <img src="@news.ImageUrl" alt="@news.Title" class="daily-news-image"
            style="@(imageLoaded ? "display: block;" : "display: none;")" @onload="OnImageLoaded" @onerror="OnImageError"
            key="@news.ImageUrl" />
    }
    <div class="daily-news-content @(IsHorizontal ? "ishorizontal" : "")">
        <div class="daily-news-title @(IsHorizontal ? "isTexthorizontal" : "")">@news.Title</div>
    </div>
</div>
</MudLink>

<style>
    .news-card {
        display: flex;
        border-radius: 6px;
        overflow: hidden;
        font-family: 'Public Sans', sans-serif;
        width: 100%;
        /* Always take full parent width */
        max-width: 100%;
        /* Prevent overflow */
        flex-direction: column;
        box-sizing: border-box;
    }

    .news-card.horizontal {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: flex-start;
        flex: 1 1 calc(33.333% - 1rem);
        max-width: 100%;
        height: 130px;
        padding: 10px;
        gap: 10px;
    }

    .image-placeholder {
        width: 100%;
        height: 140px;
        border-radius: 6px;
        display: flex;
        font-family: 'Public Sans', sans-serif;
        background-color: #FAFAFA;
        border-radius: 6px;
        align-items: center;
        justify-content: center;
        color: #555;
        font-size: 1rem;
    }

    .image-placeholder.ishorizontal {
        width: 100px;
        height: 177px;
        border-radius: 6px;
        display: flex;
        font-family: 'Public Sans', sans-serif;
        background-color: #FAFAFA;
        border-radius: 6px;
        align-items: center;
        justify-content: center;
        color: #555;
        font-size: 1rem;
    }

    .news-card:not(.horizontal) {
        max-width: 214px;
    }

    .daily-news-image {
        width: 214px;
        aspect-ratio: 16 / 9;
        border-radius: 6px;
        object-fit: cover;
    }

    .news-card.horizontal .daily-news-image {
        aspect-ratio: 16/9;
        width: 177px;
        /* Adjust as needed */
   
        border-radius: 6px;
        object-fit: cover;
    }

    .news-card.horizontal .daily-news-content {
        @* flex: 1;
        min-width: 0; *@
    }

    .daily-news-content {
        
        display: flex;
        flex-direction: column;
        justify-content: center;
        flex: 1;
        min-width: 0;
    }

    .daily-news-content.ishorizontal {
        width: 50%;
        padding: 0;
        gap: 5px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .daily-news-title {
        font-size: 16px;
        font-weight: 600;
        color: var(--color-text-heading);
        line-height: 26px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
       
    }

    .daily-news-title:hover {
        text-decoration: underline;
        color: var(--color-primary);
        cursor: pointer;
    }

    .daily-news-title.isTexthorizontal {
        font-size: 16px;
        font-weight: 600;
        margin: 0;
        line-height: 26px;
        letter-spacing: 0;
        display: -webkit-box;
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: normal;

        scrollbar-width: none;
        /* Hide scrollbar in Firefox */
    }

    .daily-news-title::-webkit-scrollbar {
        display: none;
        /* Hide scrollbar in Webkit browsers */
    }

    .daily-news-title:visited,
    .daily-news-title:hover,
    .daily-news-title:active {
            text-decoration: underline;
            color: var(--color-primary);
            cursor: pointer;
    }

    /* Media Queries */
    @@media (max-width: 768px) {
        .news-card {
            flex-direction: column;
            max-width: 100%;
        }

        .daily-news-image {
            height: 100px;
            width: 177px;
            aspect-ratio: 16/9;
        }

        .daily-news-content {
            flex: 1;
            min-width: 0;
            /* prevents text clipping */
            padding: 8px;
        }
    }

    @@media (max-width: 425px) {
        .news-card {
            display: flex;
            flex-direction: row;
            width: 100%;
            max-width: 100% !important;
            margin-bottom: 5px;
            box-sizing: border-box;
            align-items: center;
            /* Ensure vertical alignment */
        }

        .daily-news-image {
            height: 100px;
            width: auto;
            max-width: 50%;
            object-fit: cover;
            border-radius: 6px;
            flex-shrink: 0;
            aspect-ratio: 16/9;
        }

        .daily-news-content {
            width: 60%;
            padding: 8px;
            flex: 1;
            min-width: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            /* Vertically center text */
            height: 100px;
            /* Match image height */
            box-sizing: border-box;
        }

        .daily-news-title {
            font-size: 16px;
            font-weight: 600;
            color: var(--color-text-heading);
            line-height: 26px;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            /* Show up to 3 lines */
            -webkit-box-orient: vertical;
            overflow: hidden;
            /* Hide overflow and scrollbars */
            text-overflow: ellipsis;
            text-align: left;
            /* Center the text */
            white-space: normal;
            /* Allow wrapping */
            scrollbar-width: none;
            /* Hide scrollbar in Firefox */
        }

        .daily-news-title::-webkit-scrollbar {
            display: none;
            /* Hide scrollbar in Webkit browsers */
        }
    }

    @@media (max-width: 430px) {
        .news-card {
            display: flex;
            flex-direction: row;
            width: 100%;
            margin-bottom: 5px;
            box-sizing: border-box;
            max-width: 100% !important;
        }
    }

    @@media (max-width: 518px) {
        .news-card {
            display: flex;
            flex-direction: row;
            width: 100%;
            margin-bottom: 5px;
            box-sizing: border-box;
            max-width: 100% !important;
        }
    }
</style>
