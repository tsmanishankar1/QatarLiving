@inherits MoreArticleBase
<div class="more-articles">
    <h3><span class="accent-bar">|</span> More Articles</h3>

    @foreach (var article in Articles)
    {
        <div class="article-entry">
            <div class="article-content">
                <div class="article-meta">@article.Category</div>
                <a href="@article.Url" class="article-title">@article.Title</a>
            </div>
            @if (!string.IsNullOrWhiteSpace(article.ImageUrl))
            {
                <img src="@article.ImageUrl" class="article-image" />
            }
        </div>
    }
</div>

<style>
    .more-articles {
        max-width: 600px;
        margin: 0 auto;
        font-family: 'Public Sans', sans-serif;
    }

    .accent-bar {
        color: #003865;
        font-weight: bold;
        margin-right: 4px;
    }

    h3 {
        font-size: 20px;
        margin-bottom: 20px;
    }

    .article-entry {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        padding: 12px 0;
        border-bottom: 1px solid #eee;
    }

    .article-content {
        flex: 1;
        padding-right: 12px;
    }

    .article-meta {
        color: #FF7F38;
        font-weight: 600;
        font-size: 14px;
        margin-bottom: 4px;
    }

    .article-title {
        display: block;
        font-size: 16px;
        font-weight: 500;
        text-decoration: none;
        color: #000;
        line-height: 1.4;
    }

    .article-title:hover {
        text-decoration: underline;
    }

    .article-image {
        width: 100px;
        height: auto;
        border-radius: 6px;
        object-fit: cover;
    }
</style>

