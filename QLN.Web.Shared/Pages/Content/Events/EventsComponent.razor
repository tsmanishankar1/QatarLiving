        </div>

        <FeaturedEvents FeaturedEvent="FeaturedEventData" Loading="isLoadingFeatured" />

        <div class="responsive-container">

            @if (isLoadingCategories)
            {
                <SearchSkeletons />
            }
            else if (EventCategories?.Any() == true)
            {
                <SearchSection Categories="EventCategories" />
            }


            <EventsList Items="ListOfEvents" Loading="isLoadingEvents" />
        </div>
    </div>
</div>

