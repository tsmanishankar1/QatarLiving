@inherits DailyVideoCardsBase
@using MudBlazor;
<div class="watch-section">

    <!-- Title block -->
    <div class="section-title">
        <h3 class="section-heading">
            <span class="accent-bar"></span>Watch on Qatar Living
        </h3>
    </div>


    <!-- Main Video -->
    <div class="main-video-wrapper video-card" @onclick="() => ToggleVideoPlay(SelectedVideo)"
        @onmouseenter="() => ShowPlayButton(SelectedVideo)" @onmouseleave="() => HidePlayButton(SelectedVideo)">

        <video width="100%" height="100%" muted loop style="object-fit: cover;" src="@SelectedVideo.VideoUrl"
            @ref="SelectedVideo.VideoElement">
        </video>

        @if (SelectedVideo.ShowPlayButton)
        {
            <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; 
                            display: flex; justify-content: center; align-items: center;
                            background: rgba(0,0,0,0.3);">
                <MudIcon Icon="@Icons.Material.Filled.PlayCircle" Style="color:var(--color-text-white); font-size: 36px;" />
            </div>
        }
    </div>

    <!-- Video List -->
    <div class="video-list-container">
        <div class="video-list">
            @foreach (var video in VideoList)
            {
                <div class="video-card" @onclick="() => SelectVideo(video)">
                    <div class="thumbnail-container">
                        <img src="@video.ThumbnailUrl" class="thumbnail" />
                        <div class="play-icon">&#9658;</div>
                    </div>
                    <div class="video-title">
                        @if (video == SelectedVideo)
                        {
                            <span class="selected-title">@video.Title</span>
                        }
                        else
                        {
                            <a class="list-title" href="#">@video.Title</a>
                        }
                    </div>
                </div>
            }

            <div class="view-all">
                <a href="#">View all videos &rarr;</a>
            </div>
        </div>
    </div>

</div>


<style>
    .watch-section {
        align-items: center;
        display: flex;
        gap: 32px;
        margin: 20px auto;
        width: 100%;
        padding: 16px;
        font-family: 'Public Sans', sans-serif;
        flex-wrap: wrap;
    }

    .main-video-wrapper {
        order: 2;
        position: relative;
        width: 100%;
        max-width: 738px;
        aspect-ratio: 16 / 9;
        border-radius: 12px;
        overflow: hidden;
        cursor: pointer;
        flex: 1;
        border: #F0F0F0 1px solid;
    }

    .main-video-wrapper video {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }


    .video-list {
        width: 100%;
        height: 416px;
    }

    .video-list h2 {
        font-size: 20px;
        margin-bottom: 20px;
    }

    .video-card {
        display: flex;
        margin-bottom: 16px;
        cursor: pointer;
    }

    @* .accent-bar {
        color: #003865;
        font-weight: bold;
        margin-right: 4px;
        order: 0;
    } *@
    .section-title {
        width: 100%;
        order: 0;
        font-family: 'Public Sans', sans-serif;
        font-size: 25px;
        font-weight: 600;
        color: var(--color-text-heading);
    }


    .thumbnail-container {
        position: relative;
        width: 180px;
        height: 100px;
        margin-right: 12px;
    }

    .thumbnail {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 8px;
    }

    .play-icon {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 18px;
        color: white;
        background: rgba(0, 0, 0, 0.5);
        padding: 4px 6px;
        border-radius: 50%;
    }

    .video-title {
        flex: 1;
        display: flex;
        align-items: center;
        font-size: 14px;
    }

    .section-heading {
        display: flex;
        align-items: center;
        font-family: 'Public Sans', sans-serif;
        font-size: 25px;
        font-weight: 600;
        color: var(--color-primary);
    }

    .accent-bar {
        display: inline-block;
        width: 6px;
        height: 26px;
        background-color: var(--color-primary);
        margin-right: 8px;
    }

    .selected-title {
        font-family: 'Public Sans', sans-serif;
        font-size: 16px;
        font-weight: 600;
        color: var(--color-primary);
    }

    .list-title {
        font-family: 'Public Sans', sans-serif;
        font-size: 16px;
        font-weight: 600;
        color: var(--color-text-heading);
    }

    .view-all {
        margin-top: 8px;
    }

    .view-all a {
        color: #FF7F38;
        font-weight: bold;
        font-size: 14px;
        text-decoration: none;
    }

    .main-video {
        flex: 1;
        background: #fafafa;
        border-radius: 8px;
        padding: 16px;
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
    }

    .main-thumbnail {
        width: 100%;
        height: auto;
        border-radius: 8px;
    }

    .thumbnail-container.large {
        position: relative;
    }

    .play-icon.large {
        font-size: 32px;
        padding: 8px 12px;
    }

    .main-caption {
        margin-top: 10px;
    }

    .video-label {
        font-size: 14px;
        color: #FF7F38;
        font-weight: bold;
        display: block;
        margin-bottom: 4px;
    }

    .main-caption h3 {
        font-size: 22px;
        font-weight: bold;
    }

    .video-list-container {
        width: 35%;
        order: 1;

    }

    .video-list {
        height: 416px;
    }


    @@media (max-width: 768px) {
        .watch-section {
            flex-direction: column;
            padding: 8px;
        }

        .section-title {
            order: 1;
        }

        .main-video-wrapper {
            order: 2;
            width: 100% !important;
            max-width: 100%;
        }

        .video-list-container {
            order: 3;
            width: 100% !important;
        }

        .video-list {
            height: auto;
        }

    }
</style>