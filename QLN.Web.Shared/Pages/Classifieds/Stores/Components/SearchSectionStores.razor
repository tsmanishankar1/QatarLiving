<div class="search-stores-section">
    <!-- Search Input -->
    <div class="input-group stores-search-input">
        <span class="left-icon">
            <img src="/qln-images/content/Search.svg" alt="search icon" class="left-search-icon" width="23" height="23" />
        </span>
        <input type="text" placeholder="Search" @bind="searchText" />
    </div>

    <!-- Location Input -->
    <div class="input-group location-input">
        <input type="text" placeholder="Location" @bind="locationText" />
        <span class="right-icon">
            <MudIcon Icon="@Icons.Material.Filled.LocationOn" Size="Size.Medium" />
        </span>
    </div>

    <!-- Search Button -->
    <button class="search-button-store" @onclick="OnSearch">Search</button>
</div>

@code {
    private string searchText = "";
    private string locationText = "";

    private void OnSearch()
    {
        Console.WriteLine($"Searching: {searchText}, Location: {locationText}");
    }
}



