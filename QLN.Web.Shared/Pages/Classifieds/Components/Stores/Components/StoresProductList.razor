
@using MudBlazor
@using QLN.Web.Shared.Models
@using QLN.Web.Shared.Pages.Classifieds.Components.Itesm.Components
@using QLN.Web.Shared.Pages.Classifieds.Components.Landing.Components

<div style="width: 100%; background-color: var(--color-secondary-background);">
    <div style="width: 100%; padding: 0px 40px;  justify-content: space-around; ">
        <div class="category-banner-wrapper">
            <img src="/images/banner_image.svg" alt="Category Banner" class="category-banner-image" />
        </div>
        <MudStack Spacing="2" Class="pa-6">

        <!-- Store Info Row -->
        <div style="display: flex;  align-items: center;">

    <!-- Left side: Avatar + Store Name (vertical) -->
    <div style="display: flex; flex-direction: column; align-items: center; gap: 8px;">
        <MudAvatar Size="Size.Large" Image="https://yourstorelogo.png" />
    </div>
         <MudText Typo="Typo.h5" Class="store-title fw-bold">Lulu Hypermarket</MudText>
    <!-- Right side: Contact Details (vertical stack) -->
    <div style="display: flex; flex-direction: row; gap: 8px;">
        <MudChip T="string" Color="Color.Warning" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Language">
            www.luluhypermarket.qa
        </MudChip>
        <MudChip T="string" Color="Color.Warning" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Phone">
            +974 50305370
        </MudChip>
        <MudChip T="string" Color="Color.Warning" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Email">
            contact@lulu.qa
        </MudChip>
    </div>

    </div>
        <!-- Back Navigation -->
        <MudLink Href="/stores" Class="d-inline-flex align-items-center">
            <MudIcon Icon="@Icons.Material.Filled.ArrowBack" />
            <span class="ms-1">Back to Stores</span>
        </MudLink>

        <!-- 🔍 Search Bar Placeholder -->
        <SearchBarSection />

        <!-- 📦 Store Products Header -->
        <div style="display: flex; flex-direction: row; justify-content: space-between; align-items: center; gap: 8px;">
            <MudText Typo="Typo.subtitle1" Class="fw-bold">
                Store Products (120 results)
            </MudText>

